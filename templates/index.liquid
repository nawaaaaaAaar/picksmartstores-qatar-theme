<style>
  /* Reset and Base Styles */
  .homepage-container {
    margin: 0;
    padding: 0;
  }

  /* Hero Section - Main boAthead DAYS */
  .homepage-hero {
    background: linear-gradient(135deg, #242833 0%, #1a1a1a 30%, #242833 100%);
    color: white;
    padding: 120px 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .homepage-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, rgba(217, 35, 45, 0.15) 0%, transparent 70%);
    z-index: 1;
  }

  .homepage-hero .page-width {
    position: relative;
    z-index: 2;
  }

  .hero-title {
    font-size: clamp(48px, 8vw, 96px);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -2px;
    margin-bottom: 16px;
    background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  .hero-subtitle {
    font-size: clamp(24px, 4vw, 48px);
    font-weight: 900;
    margin-bottom: 12px;
    color: #ff4444;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .hero-description {
    font-size: clamp(16px, 2vw, 20px);
    font-weight: 500;
    margin-bottom: 40px;
    opacity: 0.9;
  }

  .hero-buttons {
    display: flex;
    gap: 24px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-button {
    background: #d9232d;
    color: white;
    padding: 18px 36px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 16px;
    transition: all 0.3s ease;
    display: inline-block;
    border: none;
  }

  .hero-button:hover {
    background: #b01d26;
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(217, 35, 45, 0.4);
  }

  .hero-button--secondary {
    background: transparent;
    border: 2px solid white;
    color: white;
  }

  .hero-button--secondary:hover {
    background: white;
    color: #242833;
    transform: translateY(-3px);
  }

  /* Product Carousel Sections */
  .product-carousel-section {
    padding: 80px 0;
    background: #0a0a0a;
    position: relative;
  }

  .product-carousel-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 25%, #2d2d2d 50%, #1a1a1a 75%, #0a0a0a 100%);
    z-index: 1;
  }

  .product-carousel-section .page-width {
    position: relative;
    z-index: 2;
  }

  .carousel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
  }

  .carousel-title {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
    margin: 0;
  }

  .view-all-link {
    color: #d9232d;
    text-decoration: none;
    font-weight: 600;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
  }

  .view-all-link:hover {
    color: #ff4444;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 24px;
  }

  .product-card {
    background: #1a1a1a;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.4);
    border-color: rgba(217, 35, 45, 0.3);
  }

  .product-image {
    aspect-ratio: 1;
    overflow: hidden;
    position: relative;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .discount-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: #d9232d;
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .product-info {
    padding: 20px;
  }

  .product-title {
    margin: 0 0 12px 0;
    font-size: 16px;
    font-weight: 600;
    color: white;
    line-height: 1.3;
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }

  .current-price {
    font-size: 20px;
    font-weight: 700;
    color: #d9232d;
  }

  .compare-price {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }

  .add-to-cart-btn {
    width: 100%;
    background: #d9232d;
    color: white;
    border: none;
    padding: 12px;
    border-radius: 8px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .add-to-cart-btn:hover {
    background: #b01d26;
    transform: translateY(-2px);
  }

  /* Promotional Banner Sections */
  .promo-banner {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #1a1a2e 100%);
    padding: 80px 0;
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .promo-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(217, 35, 45, 0.1) 0%, transparent 50%, rgba(217, 35, 45, 0.1) 100%);
    z-index: 1;
  }

  .promo-banner .page-width {
    position: relative;
    z-index: 2;
  }

  .promo-badge {
    display: inline-block;
    background: #d9232d;
    color: white;
    padding: 12px 24px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }

  .promo-title {
    font-size: clamp(42px, 7vw, 84px);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -2px;
    margin-bottom: 16px;
    background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .promo-subtitle {
    font-size: clamp(18px, 3vw, 28px);
    font-weight: 600;
    margin-bottom: 32px;
    opacity: 0.9;
  }

  /* Newsletter Section */
  .newsletter-section {
    background: #f8f8f8;
    padding: 80px 0;
    text-align: center;
  }

  .newsletter-title {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 900;
    color: #1a1a1a;
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .newsletter-description {
    font-size: 18px;
    color: #666;
    margin-bottom: 40px;
  }

  .newsletter-form {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
    gap: 16px;
  }

  .newsletter-input {
    flex: 1;
    padding: 16px 20px;
    border: 2px solid #ddd;
    border-radius: 8px;
    font-size: 16px;
    background: white;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: #d9232d;
  }

  .newsletter-button {
    background: #d9232d;
    color: white;
    border: none;
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter-button:hover {
    background: #b01d26;
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media screen and (max-width: 989px) {
    .carousel-header {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 20px;
    }
  }

  @media screen and (max-width: 749px) {
    .homepage-hero {
      padding: 80px 0;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-button {
      width: 100%;
      max-width: 280px;
    }

    .product-carousel-section {
      padding: 60px 0;
    }

    .promo-banner {
      padding: 60px 0;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-input,
    .newsletter-button {
      width: 100%;
    }

    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 16px;
    }
  }
</style>


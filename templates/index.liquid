<!-- Featured Products Section -->
<section class="featured-section">
  <div class="page-width">
    <h2 class="section-title">Featured Products</h2>
    <p class="section-description">Discover our premium audio collection</p>

    {% assign featured_collection = collections.all %}
    {% if collections['featured-products'] != blank %}
      {% assign featured_collection = collections['featured-products'] %}
    {% elsif collections.frontpage != blank %}
      {% assign featured_collection = collections.frontpage %}
    {% endif %}

    <div
      class="product-grid"
      style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 30px; margin-top: 40px;"
    >
      {% for product in featured_collection.products limit: 8 %}
        <div
          class="product-card"
          style="background: white; border-radius: 16px; overflow: hidden; border: 1px solid rgba(255,255,255,0.1); box-shadow: 0 8px 32px rgba(0,0,0,0.2);"
        >
          <a href="{{ product.url }}">
            {% if product.featured_media %}
              <div style="aspect-ratio: 1; overflow: hidden;">
                {{
                  product.featured_media
                  | image_url: width: 400
                  | image_tag: style: 'width: 100%; height: 100%; object-fit: cover;'
                }}
              </div>
            {% else %}
              <div style="aspect-ratio: 1; background: #f5f5f5; display: flex; align-items: center; justify-content: center;">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}

            <div style="padding: 20px;">
              <h3 style="margin: 0 0 10px 0; font-size: 16px; font-weight: 600; color: #121212;">
                {{ product.title }}
              </h3>
              <div style="font-size: 18px; font-weight: 700; color: #d9232d;">
                {{ product.price | money }}
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; color: #999; font-size: 14px; margin-left: 8px;">
                    {{- product.compare_at_price | money -}}
                  </span>
                {% endif %}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

    <div style="text-align: center; margin-top: 40px;">
      <a href="{{ routes.collections_url }}" class="hero-button">View All Products</a>
    </div>
  </div>
</section>

<!-- Newsletter Section -->
<section style="background: #f8f9fa; padding: 80px 0; text-align: center;">
  <div class="page-width">
    <h2 style="font-size: clamp(28px, 5vw, 42px); font-weight: 700; margin-bottom: 16px; color: #121212;">
      Stay Updated
    </h2>
    <p style="font-size: 18px; color: #666; margin-bottom: 30px;">
      Get the latest deals and product updates delivered to your inbox
    </p>

    {% form 'customer' %}
      <div style="display: flex; justify-content: center; gap: 16px; flex-wrap: wrap; max-width: 500px; margin: 0 auto;">
        <input
          type="email"
          name="contact[email]"
          placeholder="Enter your email"
          style="flex: 1; min-width: 250px; padding: 16px 20px; border: 2px solid #ddd; border-radius: 8px; font-size: 16px;"
          required
        >
        <button type="submit" class="hero-button" style="min-width: 140px;">Subscribe</button>
      </div>
    {% endform %}
  </div>
</section>

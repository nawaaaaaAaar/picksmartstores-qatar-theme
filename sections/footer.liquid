{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <!-- Main Footer Content -->
    <div class="footer__content-top">
      <div class="footer__main-grid">
        <!-- Brand Information Column -->
        <div class="footer-block footer-block--brand">
          {% if section.settings.brand_logo != blank %}
            <div class="footer__brand-logo">
              {{ section.settings.brand_logo | image_url: width: 200 | image_tag: loading: 'lazy', alt: shop.name }}
            </div>
          {% else %}
            <h2 class="footer__brand-name">{{ shop.name }}</h2>
          {% endif %}

          {% if section.settings.brand_description != blank %}
            <div class="footer__brand-description rte">
              {{ section.settings.brand_description }}
            </div>
          {% endif %}

          <!-- Social Media Links -->
          {% if section.settings.show_social %}
            <div class="footer__social">
              <h3 class="footer__social-heading">{{ section.settings.social_heading | default: 'Follow Us' }}</h3>
              <ul class="footer__social-list list-unstyled">
                {% if settings.social_facebook_link != blank %}
                  <li class="footer__social-item">
                    <a
                      href="{{ settings.social_facebook_link }}"
                      target="_blank"
                      rel="noopener"
                      class="footer__social-link"
                    >
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                      <span class="visually-hidden">Facebook</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_instagram_link != blank %}
                  <li class="footer__social-item">
                    <a
                      href="{{ settings.social_instagram_link }}"
                      target="_blank"
                      rel="noopener"
                      class="footer__social-link"
                    >
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                      <span class="visually-hidden">Instagram</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_twitter_link != blank %}
                  <li class="footer__social-item">
                    <a
                      href="{{ settings.social_twitter_link }}"
                      target="_blank"
                      rel="noopener"
                      class="footer__social-link"
                    >
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                      </svg>
                      <span class="visually-hidden">Twitter</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_youtube_link != blank %}
                  <li class="footer__social-item">
                    <a
                      href="{{ settings.social_youtube_link }}"
                      target="_blank"
                      rel="noopener"
                      class="footer__social-link"
                    >
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                      </svg>
                      <span class="visually-hidden">YouTube</span>
                    </a>
                  </li>
                {% endif %}
              </ul>
            </div>
          {% endif %}
        </div>

        <!-- Dynamic Menu Columns -->
        {%- for block in section.blocks -%}
          {%- if block.type == 'link_list' -%}
            <div class="footer-block footer-block--menu" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer-block__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="footer-block__list list-unstyled">
                  {%- for link in block.settings.menu.links -%}
                    <li class="footer-block__list-item">
                      <a href="{{ link.url }}" class="footer-block__link link link--text">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {%- elsif block.type == 'newsletter' -%}
            <div class="footer-block footer-block--newsletter" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer-block__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="footer-block__text rte">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}
              {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="newsletter-form__field-wrapper">
                  <div class="field">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input newsletter-form__input"
                      value=""
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      placeholder="{{ 'newsletter.label' | t }}"
                      required
                    >
                    <button type="submit" class="newsletter-form__button btn btn--primary" name="commit">
                      {{ block.settings.button_label | default: 'Subscribe' }}
                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="ContactFooter-error">
                      {{ form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email }}.
                    </small>
                  {%- endif -%}
                </div>
              {%- endform -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__content-bottom">
      <div class="footer__bottom-grid">
        <!-- Copyright -->
        <div class="footer__copyright">
          <small class="copyright__content">
            &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}
            {%- if section.settings.show_policies -%}
              {% for policy in shop.policies %}
                {% if policy != blank %}
                  <span class="footer__policy-separator">|</span>
                  <a href="{{ policy.url }}" class="footer__policy-link">{{ policy.title }}</a>
                {% endif %}
              {% endfor %}
            {%- endif -%}
          </small>
        </div>

        <!-- Payment Methods -->
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <span class="footer__payment-label">{{ section.settings.payment_label | default: 'We Accept' }}</span>
            <ul class="footer__payment-list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="footer__payment-item">
                  {{ type | payment_type_svg_tag: class: 'payment-icon' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer Styling */
  .footer {
    background-color: var(--color-background-light-gray);
    border-top: 1px solid var(--color-border-light);
  }

  .footer__main-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1.5fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  @media screen and (max-width: 990px) {
    .footer__main-grid {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 2rem;
    }
  }

  @media screen and (max-width: 749px) {
    .footer__main-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
  }

  /* Brand Section */
  .footer-block--brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer__brand-logo img {
    max-width: 180px;
    height: auto;
  }

  .footer__brand-name {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--color-text-dark);
    margin: 0;
  }

  .footer__brand-description {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-text-medium);
    max-width: 300px;
  }

  /* Social Media */
  .footer__social-heading {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
  }

  .footer__social-list {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: var(--color-text-dark);
    color: white;
    border-radius: 50%;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .footer__social-link:hover {
    background-color: var(--color-primary-brand-red);
    transform: translateY(-2px);
  }

  /* Menu Blocks */
  .footer-block__heading {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-dark);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-primary-brand-red);
    padding-bottom: 0.5rem;
    display: inline-block;
  }

  .footer-block__list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-block__link {
    color: var(--color-text-medium);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .footer-block__link:hover {
    color: var(--color-primary-brand-red);
  }

  .footer-block__link:hover::before {
    content: 'â†’';
    position: absolute;
    left: -15px;
    color: var(--color-primary-brand-red);
  }

  /* Newsletter */
  .footer-block--newsletter {
    background-color: var(--color-background-white);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--color-border-light);
  }

  .footer-block__text {
    margin-bottom: 1.5rem;
    color: var(--color-text-medium);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .newsletter-form__field-wrapper {
    position: relative;
  }

  .newsletter-form__input {
    width: 100%;
    padding: 1rem;
    border: 2px solid var(--color-border-light);
    border-radius: 8px;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    background-color: var(--color-background-light-gray);
  }

  .newsletter-form__input:focus {
    outline: none;
    border-color: var(--color-primary-brand-red);
  }

  .newsletter-form__button {
    width: 100%;
    padding: 1rem;
    background-color: var(--color-primary-brand-red);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .newsletter-form__button:hover {
    background-color: var(--color-primary-brand-green);
  }

  /* Footer Bottom */
  .footer__content-bottom {
    border-top: 1px solid var(--color-border-light);
    padding-top: 2rem;
  }

  .footer__bottom-grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  @media screen and (max-width: 749px) {
    .footer__bottom-grid {
      flex-direction: column;
      text-align: center;
    }
  }

  .footer__copyright {
    font-size: 0.8rem;
    color: var(--color-text-medium);
  }

  .footer__policy-separator {
    margin: 0 0.5rem;
  }

  .footer__policy-link {
    color: var(--color-text-medium);
    text-decoration: none;
  }

  .footer__policy-link:hover {
    color: var(--color-primary-brand-red);
  }

  /* Payment Methods */
  .footer__payment {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer__payment-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-text-medium);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer__payment-list {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .footer__payment-item .payment-icon {
    width: 32px;
    height: 20px;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .footer__payment-item:hover .payment-icon {
    filter: grayscale(0%);
  }

  /* Mobile Adjustments */
  @media screen and (max-width: 749px) {
    .footer-block--brand {
      text-align: center;
      align-items: center;
    }

    .footer__brand-description {
      text-align: center;
    }

    .footer__social-list {
      justify-content: center;
    }

    .footer-block__link:hover::before {
      display: none;
    }
  }
</style>


{%- style -%}
  #shopify-section-{{ section.id }} {
    --boat-hero-text-color: {{ section.settings.text_color }};
    --boat-hero-background: {{ section.settings.background_color }};
    --boat-hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    margin-bottom: {{ section.settings.section_margin }}px;
  }

  #shopify-section-{{ section.id }} .boat-hero {
    background: var(--boat-hero-background);
    position: relative;
    overflow: hidden;
    min-height: {{ section.settings.section_height }}px;
    display: flex;
    align-items: {{ section.settings.content_alignment }};
    justify-content: {{ section.settings.content_position }};
  }

  #shopify-section-{{ section.id }} .boat-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .boat-hero__background img {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
    object-position: {{ section.settings.image_position }};
  }

  #shopify-section-{{ section.id }} .boat-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: var(--boat-hero-overlay-opacity);
    z-index: 2;
  }

  #shopify-section-{{ section.id }} .boat-hero__content {
    position: relative;
    z-index: 3;
    color: var(--boat-hero-text-color);
    text-align: {{ section.settings.text_alignment }};
    max-width: {{ section.settings.content_width }}px;
    padding: {{ section.settings.content_padding }}px;
  }

  #shopify-section-{{ section.id }} .boat-hero__title {
    font-family: var(--boat-font-primary);
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: {{ section.settings.title_line_height }};
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
    text-transform: {{ section.settings.title_transform }};
    margin-bottom: {{ section.settings.title_margin }}px;
    {% if section.settings.title_gradient %}
      background: linear-gradient({{ section.settings.title_gradient }});
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% endif %}
  }

  #shopify-section-{{ section.id }} .boat-hero__subtitle {
    font-family: var(--boat-font-primary);
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: {{ section.settings.subtitle_weight }};
    line-height: {{ section.settings.subtitle_line_height }};
    margin-bottom: {{ section.settings.subtitle_margin }}px;
    opacity: {{ section.settings.subtitle_opacity | divided_by: 100.0 }};
  }

  #shopify-section-{{ section.id }} .boat-hero__description {
    font-family: var(--boat-font-primary);
    font-size: {{ section.settings.description_size }}px;
    font-weight: {{ section.settings.description_weight }};
    line-height: {{ section.settings.description_line_height }};
    margin-bottom: {{ section.settings.description_margin }}px;
    max-width: {{ section.settings.description_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .boat-hero__buttons {
    display: flex;
    gap: {{ section.settings.button_gap }}px;
    justify-content: {{ section.settings.button_alignment }};
    flex-wrap: wrap;
    margin-top: {{ section.settings.button_margin_top }}px;
  }

  #shopify-section-{{ section.id }} .boat-hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-family: var(--boat-font-primary);
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: {{ section.settings.button_text_weight }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
    min-height: {{ section.settings.button_height }}px;
    border: {{ section.settings.button_border_width }}px solid transparent;
  }

  #shopify-section-{{ section.id }} .boat-hero__button--primary {
    background: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_text }};
    border-color: {{ section.settings.primary_button_border }};
  }

  #shopify-section-{{ section.id }} .boat-hero__button--primary:hover {
    background: {{ section.settings.primary_button_bg_hover }};
    color: {{ section.settings.primary_button_text_hover }};
    border-color: {{ section.settings.primary_button_border_hover }};
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  #shopify-section-{{ section.id }} .boat-hero__button--secondary {
    background: {{ section.settings.secondary_button_bg }};
    color: {{ section.settings.secondary_button_text }};
    border-color: {{ section.settings.secondary_button_border }};
  }

  #shopify-section-{{ section.id }} .boat-hero__button--secondary:hover {
    background: {{ section.settings.secondary_button_bg_hover }};
    color: {{ section.settings.secondary_button_text_hover }};
    border-color: {{ section.settings.secondary_button_border_hover }};
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  {% if section.settings.enable_animations %}
    #shopify-section-{{ section.id }} .boat-hero__content > * {
      opacity: 0;
      transform: translateY(30px);
      animation: boatFadeInUp 0.8s ease-out forwards;
    }

    #shopify-section-{{ section.id }} .boat-hero__title {
      animation-delay: 0.2s;
    }

    #shopify-section-{{ section.id }} .boat-hero__subtitle {
      animation-delay: 0.4s;
    }

    #shopify-section-{{ section.id }} .boat-hero__description {
      animation-delay: 0.6s;
    }

    #shopify-section-{{ section.id }} .boat-hero__buttons {
      animation-delay: 0.8s;
    }

    @keyframes boatFadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  {% endif %}

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .boat-hero {
      min-height: {{ section.settings.mobile_height }}px;
      padding: {{ section.settings.mobile_padding }}px 0;
    }

    #shopify-section-{{ section.id }} .boat-hero__content {
      max-width: 100%;
      padding: {{ section.settings.mobile_content_padding }}px;
    }

    #shopify-section-{{ section.id }} .boat-hero__title {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    #shopify-section-{{ section.id }} .boat-hero__subtitle {
      font-size: {{ section.settings.mobile_subtitle_size }}px;
    }

    #shopify-section-{{ section.id }} .boat-hero__description {
      font-size: {{ section.settings.mobile_description_size }}px;
    }

    #shopify-section-{{ section.id }} .boat-hero__buttons {
      flex-direction: {{ section.settings.mobile_button_direction }};
      justify-content: {{ section.settings.mobile_button_alignment }};
    }

    #shopify-section-{{ section.id }} .boat-hero__button {
      {% if section.settings.mobile_full_width_buttons %}
        width: 100%;
      {% endif %}
      font-size: {{ section.settings.mobile_button_size }}px;
      padding: {{ section.settings.mobile_button_padding }}px;
    }
  }
{%- endstyle -%}

<div class="boat-hero">
  {% if section.settings.background_image %}
    <div class="boat-hero__background">
      {%- liquid
        assign sizes = '100vw'
        assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      -%}
      {{
        section.settings.background_image
        | image_url: width: 3840
        | image_tag: loading: 'lazy', sizes: sizes, widths: widths, alt: section.settings.background_image.alt
        | escape
      }}
    </div>
  {% endif %}

  {% if section.settings.overlay_opacity > 0 %}
    <div class="boat-hero__overlay"></div>
  {% endif %}

  <div class="boat-container">
    <div class="boat-hero__content">
      {% if section.settings.subtitle != blank %}
        <p class="boat-hero__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.title != blank %}
        <h1 class="boat-hero__title">{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="boat-hero__description">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.primary_button_text != blank or section.settings.secondary_button_text != blank %}
        <div class="boat-hero__buttons">
          {% if section.settings.primary_button_text != blank %}
            <a
              href="{{ section.settings.primary_button_url | default: '#' }}"
              class="boat-hero__button boat-hero__button--primary"
              {% if section.settings.primary_button_url == blank %}
                onclick="event.preventDefault()"
              {% endif %}
            >
              {{ section.settings.primary_button_text }}
            </a>
          {% endif %}

          {% if section.settings.secondary_button_text != blank %}
            <a
              href="{{ section.settings.secondary_button_url | default: '#' }}"
              class="boat-hero__button boat-hero__button--secondary"
              {% if section.settings.secondary_button_url == blank %}
                onclick="event.preventDefault()"
              {% endif %}
            >
              {{ section.settings.secondary_button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>


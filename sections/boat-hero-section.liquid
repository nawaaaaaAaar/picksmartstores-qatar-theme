<style>
  .boat-hero-section {
    position: relative;
    min-height: {{ section.settings.section_height | default: 600 }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.background_color | default: '#f8f8f8' }};
    overflow: hidden;
  }

  .boat-hero-section__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .boat-hero-section__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .boat-hero-section__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | default: 0 | divided_by: 100.0 }});
    z-index: 2;
  }

  .boat-hero-section__content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: {{ section.settings.text_color | default: '#000' }};
    max-width: 800px;
    padding: 0 20px;
  }

  .boat-hero-section__subtitle {
    font-size: {{ section.settings.subtitle_size | default: 18 }}px;
    font-weight: 600;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ section.settings.subtitle_color | default: '#fe0000' }};
  }

  .boat-hero-section__title {
    font-size: {{ section.settings.title_size | default: 56 }}px;
    font-weight: 900;
    margin-bottom: 20px;
    line-height: 1.1;
    color: {{ section.settings.title_color | default: '#000' }};
  }

  .boat-hero-section__description {
    font-size: {{ section.settings.description_size | default: 18 }}px;
    margin-bottom: 35px;
    line-height: 1.6;
    color: {{ section.settings.description_color | default: '#666' }};
  }

  .boat-hero-section__buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .boat-hero-section__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 700;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    min-width: 180px;
    cursor: pointer;
  }

  .boat-hero-section__button--primary {
    background: {{ section.settings.primary_button_bg | default: '#fe0000' }};
    color: {{ section.settings.primary_button_text_color | default: '#fff' }};
    border: 2px solid {{ section.settings.primary_button_bg | default: '#fe0000' }};
  }

  .boat-hero-section__button--primary:hover {
    background: {{ section.settings.primary_button_bg_hover | default: '#e60000' }};
    border-color: {{ section.settings.primary_button_bg_hover | default: '#e60000' }};
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(254, 0, 0, 0.3);
  }

  .boat-hero-section__button--secondary {
    background: transparent;
    color: {{ section.settings.secondary_button_text_color | default: '#000' }};
    border: 2px solid {{ section.settings.secondary_button_border | default: '#000' }};
  }

  .boat-hero-section__button--secondary:hover {
    background: {{ section.settings.secondary_button_border | default: '#000' }};
    color: {{ section.settings.secondary_button_text_color | default: '#fff' }};
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .boat-hero-section {
      min-height: {{ section.settings.mobile_height | default: 500 }}px;
    }

    .boat-hero-section__content {
      max-width: 100%;
      padding: 0 15px;
    }

    .boat-hero-section__title {
      font-size: {{ section.settings.mobile_title_size | default: 36 }}px;
    }

    .boat-hero-section__subtitle {
      font-size: {{ section.settings.mobile_subtitle_size | default: 16 }}px;
      margin-bottom: 12px;
    }

    .boat-hero-section__description {
      font-size: {{ section.settings.mobile_description_size | default: 16 }}px;
      margin-bottom: 25px;
    }

    .boat-hero-section__buttons {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .boat-hero-section__button {
      width: 100%;
      max-width: 280px;
      padding: 14px 24px;
    }
  }

  /* Animation Effects */
  .boat-hero-section__content > * {
    animation: fadeInUp 0.8s ease-out;
  }

  .boat-hero-section__subtitle {
    animation-delay: 0.2s;
  }

  .boat-hero-section__title {
    animation-delay: 0.4s;
  }

  .boat-hero-section__description {
    animation-delay: 0.6s;
  }

  .boat-hero-section__buttons {
    animation-delay: 0.8s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<div class="boat-hero-section">
  {% if section.settings.background_image %}
    <div class="boat-hero-section__background">
      {{ section.settings.background_image | image_url: width: 1920 | image_tag: loading: 'lazy' }}
    </div>
  {% endif %}

  {% if section.settings.overlay_opacity > 0 %}
    <div class="boat-hero-section__overlay"></div>
  {% endif %}

  <div class="boat-hero-section__content">
    {% if section.settings.subtitle != blank %}
      <div class="boat-hero-section__subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}

    {% if section.settings.title != blank %}
      <h1 class="boat-hero-section__title">{{ section.settings.title }}</h1>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="boat-hero-section__description">{{ section.settings.description }}</div>
    {% endif %}

    {% if section.settings.primary_button_text != blank or section.settings.secondary_button_text != blank %}
      <div class="boat-hero-section__buttons">
        {% if section.settings.primary_button_text != blank %}
          <a
            href="{{ section.settings.primary_button_url | default: '#' }}"
            class="boat-hero-section__button boat-hero-section__button--primary"
          >
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank %}
          <a
            href="{{ section.settings.secondary_button_url | default: '#' }}"
            class="boat-hero-section__button boat-hero-section__button--secondary"
          >
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>


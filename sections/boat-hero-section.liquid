<style>
  .boat-hero-section {
    position: relative;
    min-height: {{ section.settings.section_height | default: 500 }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.background_color | default: '#f8f8f8' }};
    overflow: hidden;
  }

  .boat-hero-section__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .boat-hero-section__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .boat-hero-section__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | default: 0 | divided_by: 100.0 }});
    z-index: 2;
  }

  .boat-hero-section__content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: {{ section.settings.text_color | default: '#000' }};
    max-width: 800px;
    padding: 0 20px;
  }

  .boat-hero-section__subtitle {
    font-size: {{ section.settings.subtitle_size | default: 16 }}px;
    font-weight: 600;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .boat-hero-section__title {
    font-size: {{ section.settings.title_size | default: 48 }}px;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .boat-hero-section__description {
    font-size: {{ section.settings.description_size | default: 16 }}px;
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .boat-hero-section__buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .boat-hero-section__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 30px;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    transition: all 0.3s ease;
    min-width: 140px;
  }

  .boat-hero-section__button--primary {
    background: {{ section.settings.primary_button_bg | default: '#fe0000' }};
    color: {{ section.settings.primary_button_text | default: '#fff' }};
  }

  .boat-hero-section__button--primary:hover {
    background: {{ section.settings.primary_button_bg_hover | default: '#e60000' }};
    transform: translateY(-2px);
  }

  .boat-hero-section__button--secondary {
    background: transparent;
    color: {{ section.settings.secondary_button_text | default: '#000' }};
    border: 2px solid {{ section.settings.secondary_button_border | default: '#000' }};
  }

  .boat-hero-section__button--secondary:hover {
    background: {{ section.settings.secondary_button_border | default: '#000' }};
    color: #fff;
  }

  @media (max-width: 768px) {
    .boat-hero-section {
      min-height: {{ section.settings.mobile_height | default: 400 }}px;
    }

    .boat-hero-section__title {
      font-size: {{ section.settings.mobile_title_size | default: 32 }}px;
    }

    .boat-hero-section__buttons {
      flex-direction: column;
      align-items: center;
    }

    .boat-hero-section__button {
      width: 100%;
      max-width: 250px;
    }
  }
</style>

<div class="boat-hero-section">
  {% if section.settings.background_image %}
    <div class="boat-hero-section__background">
      {{ section.settings.background_image | image_url: width: 1920 | image_tag: loading: 'lazy' }}
    </div>
  {% endif %}

  {% if section.settings.overlay_opacity > 0 %}
    <div class="boat-hero-section__overlay"></div>
  {% endif %}

  <div class="boat-hero-section__content">
    {% if section.settings.subtitle != blank %}
      <div class="boat-hero-section__subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}

    {% if section.settings.title != blank %}
      <h1 class="boat-hero-section__title">{{ section.settings.title }}</h1>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="boat-hero-section__description">{{ section.settings.description }}</div>
    {% endif %}

    {% if section.settings.primary_button_text != blank or section.settings.secondary_button_text != blank %}
      <div class="boat-hero-section__buttons">
        {% if section.settings.primary_button_text != blank %}
          <a
            href="{{ section.settings.primary_button_url | default: '#' }}"
            class="boat-hero-section__button boat-hero-section__button--primary"
          >
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank %}
          <a
            href="{{ section.settings.secondary_button_url | default: '#' }}"
            class="boat-hero-section__button boat-hero-section__button--secondary"
          >
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>


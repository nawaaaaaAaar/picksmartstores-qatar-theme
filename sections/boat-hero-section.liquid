{%- style -%}
  .boat-hero-section {
    background:
      {%- if section.settings.overlay_opacity > 0 -%}
        linear-gradient(
          {{ section.settings.overlay_direction | default: '135deg' }},
          rgba({{ section.settings.overlay_color_1.red }}, {{ section.settings.overlay_color_1.green }}, {{ section.settings.overlay_color_1.blue }}, {{ section.settings.overlay_opacity | divided_by: 100.0 }}) 0%,
          rgba({{ section.settings.overlay_color_2.red }}, {{ section.settings.overlay_color_2.green }}, {{ section.settings.overlay_color_2.blue }}, {{ section.settings.overlay_opacity | divided_by: 100.0 }}) 50%,
          rgba({{ section.settings.overlay_color_1.red }}, {{ section.settings.overlay_color_1.green }}, {{ section.settings.overlay_color_1.blue }}, {{ section.settings.overlay_opacity | divided_by: 100.0 }}) 100%
        )
        {%- if section.settings.background_image != blank -%},{%- endif -%}
      {%- endif -%}
      {%- if section.settings.background_image != blank -%}
        url('{{ section.settings.background_image | image_url: width: 1920 }}')
      {%- else -%}
        url('https://user-gen-media-assets.s3.amazonaws.com/gpt4o_images/fd7a7665-7b62-4e1a-bfde-83246ca1de40.png')
      {%- endif -%};
    background-size: cover;
    background-position: {{ section.settings.background_position | default: 'center' }};
    min-height: {{ section.settings.section_height | default: 600 }}px;
    display: flex;
    align-items: {{ section.settings.content_alignment_vertical | default: 'center' }};
    justify-content: {{ section.settings.content_alignment_horizontal | default: 'center' }};
    position: relative;
    overflow: hidden;
    margin: {{ section.settings.section_margin_top | default: 0 }}px 0 {{ section.settings.section_margin_bottom | default: 0 }}px 0;
  }

  .boat-hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      {%- if section.settings.enable_gradient_effects -%}
        radial-gradient(circle at 30% 50%, rgba(217, 35, 45, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 70% 30%, rgba(0, 181, 148, 0.1) 0%, transparent 50%)
      {%- endif -%};
    pointer-events: none;
    z-index: 1;
  }

  .boat-hero-content {
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    color: {{ section.settings.text_color | default: '#ffffff' }};
    z-index: 2;
    max-width: {{ section.settings.content_max_width | default: 800 }}px;
    padding: 0 2rem;
    position: relative;
  }

  .boat-hero-title {
    font-size: clamp({{ section.settings.title_size_mobile | default: 3 }}rem, 8vw, {{ section.settings.title_size_desktop | default: 6 }}rem);
    font-weight: {{ section.settings.title_font_weight | default: 900 }};
    margin-bottom: {{ section.settings.title_margin_bottom | default: 1 }}rem;
    text-transform: {{ section.settings.title_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.title_letter_spacing | default: 0.02 }}em;
    {%- if section.settings.title_gradient_enable -%}
      background: linear-gradient(45deg, {{ section.settings.title_gradient_color_1 | default: '#ffffff' }} 0%, {{ section.settings.title_gradient_color_2 | default: '#ff6b6b' }} 50%, {{ section.settings.title_gradient_color_3 | default: '#ffffff' }} 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {%- else -%}
      color: {{ section.settings.title_color | default: '#ffffff' }};
    {%- endif -%}
    line-height: {{ section.settings.title_line_height | default: 1.1 }};
  }

  .boat-hero-subtitle {
    font-size: clamp({{ section.settings.subtitle_size_mobile | default: 1.5 }}rem, 4vw, {{ section.settings.subtitle_size_desktop | default: 2.5 }}rem);
    font-weight: {{ section.settings.subtitle_font_weight | default: 700 }};
    margin-bottom: {{ section.settings.subtitle_margin_bottom | default: 1 }}rem;
    color: {{ section.settings.subtitle_color | default: '#d9232d' }};
    text-transform: {{ section.settings.subtitle_text_transform | default: 'none' }};
    letter-spacing: {{ section.settings.subtitle_letter_spacing | default: 0 }}em;
  }

  .boat-hero-description {
    font-size: clamp({{ section.settings.description_size_mobile | default: 1 }}rem, 2vw, {{ section.settings.description_size_desktop | default: 1.25 }}rem);
    font-weight: {{ section.settings.description_font_weight | default: 600 }};
    margin-bottom: {{ section.settings.description_margin_bottom | default: 2 }}rem;
    color: {{ section.settings.description_color | default: '#ffffff' }};
    text-transform: {{ section.settings.description_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.description_letter_spacing | default: 0.05 }}em;
    max-width: {{ section.settings.description_max_width | default: 600 }}px;
    {%- if section.settings.text_alignment == 'center' -%}margin-left: auto; margin-right: auto;{%- endif -%}
  }

  .boat-hero-buttons {
    display: flex;
    gap: {{ section.settings.button_gap | default: 1 }}rem;
    justify-content: {{ section.settings.button_alignment | default: 'center' }};
    flex-wrap: wrap;
    margin-bottom: {{ section.settings.buttons_margin_bottom | default: 0 }}rem;
  }

  .boat-btn {
    padding: {{ section.settings.button_padding_y | default: 15 }}px {{ section.settings.button_padding_x | default: 30 }}px;
    font-size: {{ section.settings.button_font_size | default: 16 }}px;
    font-weight: {{ section.settings.button_font_weight | default: 700 }};
    text-transform: {{ section.settings.button_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.button_letter_spacing | default: 0.5 }}px;
    border: none;
    border-radius: {{ section.settings.button_border_radius | default: 8 }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    min-width: {{ section.settings.button_min_width | default: 150 }}px;
  }

  .boat-btn-primary {
    background: linear-gradient(45deg, {{ section.settings.primary_button_color_1 | default: '#d9232d' }}, {{ section.settings.primary_button_color_2 | default: '#ff4757' }});
    color: {{ section.settings.primary_button_text_color | default: '#ffffff' }};
    {%- if section.settings.primary_button_border_enable -%}
      border: {{ section.settings.primary_button_border_width | default: 2 }}px solid {{ section.settings.primary_button_border_color | default: 'transparent' }};
    {%- endif -%}
  }

  .boat-btn-primary:hover {
    background: linear-gradient(45deg, {{ section.settings.primary_button_hover_color_1 | default: '#b71c1c' }}, {{ section.settings.primary_button_hover_color_2 | default: '#d9232d' }});
    transform: translateY(-{{ section.settings.button_hover_lift | default: 2 }}px);
    box-shadow: 0 {{ section.settings.button_hover_shadow_y | default: 8 }}px {{ section.settings.button_hover_shadow_blur | default: 25 }}px rgba(217, 35, 45, {{ section.settings.button_hover_shadow_opacity | default: 30 | divided_by: 100.0 }});
  }

  .boat-btn-secondary {
    background: {{ section.settings.secondary_button_bg | default: 'transparent' }};
    color: {{ section.settings.secondary_button_text_color | default: '#ffffff' }};
    border: {{ section.settings.secondary_button_border_width | default: 2 }}px solid {{ section.settings.secondary_button_border_color | default: '#00b594' }};
  }

  .boat-btn-secondary:hover {
    background: {{ section.settings.secondary_button_hover_bg | default: '#00b594' }};
    color: {{ section.settings.secondary_button_hover_text_color | default: '#ffffff' }};
    transform: translateY(-{{ section.settings.button_hover_lift | default: 2 }}px);
    box-shadow: 0 {{ section.settings.button_hover_shadow_y | default: 8 }}px {{ section.settings.button_hover_shadow_blur | default: 25 }}px rgba(0, 181, 148, {{ section.settings.button_hover_shadow_opacity | default: 30 | divided_by: 100.0 }});
  }

  /* Additional Content Areas */
  .boat-hero-features {
    display: flex;
    justify-content: {{ section.settings.features_alignment | default: 'center' }};
    gap: {{ section.settings.features_gap | default: 2 }}rem;
    margin-top: {{ section.settings.features_margin_top | default: 3 }}rem;
    flex-wrap: wrap;
  }

  .boat-hero-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: {{ section.settings.features_color | default: '#ffffff' }};
    font-size: {{ section.settings.features_font_size | default: 14 }}px;
    font-weight: {{ section.settings.features_font_weight | default: 600 }};
  }

  .boat-hero-feature-icon {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  @media screen and (max-width: 749px) {
    .boat-hero-section {
      min-height: {{ section.settings.section_height_mobile | default: 500 }}px;
      padding: 2rem 0;
    }

    .boat-hero-buttons {
      flex-direction: {{ section.settings.button_layout_mobile | default: 'column' }};
      align-items: center;
    }

    .boat-btn {
      width: {{ section.settings.button_width_mobile | default: 100 }}%;
      max-width: {{ section.settings.button_max_width_mobile | default: 250 }}px;
    }

    .boat-hero-features {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
  }
{%- endstyle -%}

<div class="boat-hero-section">
  <div class="boat-hero-content">
    {%- if section.settings.title != blank -%}
      <h1 class="boat-hero-title">{{ section.settings.title }}</h1>
    {%- endif -%}

    {%- if section.settings.subtitle != blank -%}
      <div class="boat-hero-subtitle">{{ section.settings.subtitle }}</div>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="boat-hero-description">{{ section.settings.description }}</div>
    {%- endif -%}

    <div class="boat-hero-buttons">
      {%- if section.settings.button_1_text != blank -%}
        <a href="{{ section.settings.button_1_link }}" class="boat-btn boat-btn-primary">
          {{ section.settings.button_1_text }}
        </a>
      {%- endif -%}

      {%- if section.settings.button_2_text != blank -%}
        <a href="{{ section.settings.button_2_link }}" class="boat-btn boat-btn-secondary">
          {{ section.settings.button_2_text }}
        </a>
      {%- endif -%}
    </div>

    {%- if section.settings.show_features -%}
      <div class="boat-hero-features">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'feature' -%}
              <div class="boat-hero-feature">
                {%- if block.settings.icon != blank -%}
                  <div class="boat-hero-feature-icon">{{ block.settings.icon }}</div>
                {%- endif -%}
                <span>{{ block.settings.text }}</span>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>


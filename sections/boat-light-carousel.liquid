  This is a pixel-perfect replica of boat's actual product carousel structure (compact version)
{%- endcomment -%}

{%- style -%}
  /* 🚤 EXACT Boat Light Carousel Styling - Cloned from boat-lifestyle.com */
  .boat-light-carousel-section {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top | default: 40 }}px 0 {{ section.settings.section_padding_bottom | default: 40 }}px;
  }

  .boat-light-carousel-container {
    max-width: {{ section.settings.content_max_width | default: 1400 }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.content_padding_x | default: 20 }}px;
  }

  /* Header matching boat's exact style (centered) */
  .boat-light-carousel-header {
    text-align: {{ section.settings.header_alignment | default: 'center' }};
    margin-bottom: {{ section.settings.header_margin_bottom | default: 25 }}px;
  }

  .boat-light-carousel-title {
    font-size: {{ section.settings.title_size | default: 28 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    color: {{ section.settings.title_color | default: '#1a1a1a' }};
    margin: 0 0 {{ section.settings.title_margin_bottom | default: 8 }}px 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .boat-light-carousel-subtitle {
    color: {{ section.settings.subtitle_color | default: '#666666' }};
    font-size: {{ section.settings.subtitle_size | default: 16 }}px;
    font-weight: {{ section.settings.subtitle_weight | default: 400 }};
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* EXACT boat product-list__inner structure (compact) */
  .product-list__inner--light {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width | default: 240 }}px, 1fr));
    gap: {{ section.settings.grid_gap | default: 20 }}px;
    padding: 0;
  }

  /* EXACT boat product-item styling (light/compact version) */
  .product-item--light.two-point-o.product-item-vertical {
    background: #ffffff;
    border-radius: 10px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
    position: relative;
  }

  .product-item--light.two-point-o.product-item-vertical:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .product__wrapper--light {
    position: relative;
  }

  /* EXACT boat labels system (compact) */
  .labels-wrapper--light.metafeild-label {
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .metafeild-label--light.label--highlight.custom-label.label.ui-2 {
    background: {{ section.settings.spec_background | default: '#ffd700' }};
    color: {{ section.settings.spec_color | default: '#1a1a1a' }};
    padding: 4px 8px;
    border-radius: 3px;
    font-size: 10px;
    font-weight: 600;
    width: fit-content;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    border: none;
    line-height: 1.2;
    letter-spacing: -0.2px;
  }

  .card--rating--light {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(6px);
    border-radius: 5px;
    padding: 4px 6px;
    width: fit-content;
  }

  .rating--light {
    display: flex;
    align-items: center;
    gap: 3px;
  }

  .rating__stars--light {
    display: flex;
    align-items: center;
    gap: 1px;
    font-size: 10px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .rating__stars--light img {
    width: 12px;
    height: 12px;
    display: inline-block;
    vertical-align: bottom;
  }

  .rating__caption--light.plp-reviews {
    font-size: 9px !important;
    color: #666;
    display: flex;
    align-items: center;
    gap: 2px;
  }

  .rating__caption--light img {
    width: 9px;
    height: 9px;
  }

  /* EXACT boat priority labels (light version) */
  .priority.label--light.label--highlight.custom-label {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 9px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 3px;
    width: fit-content;
    border: none;
    line-height: 1.2;
  }

  .bg-purple--light.just.launched {
    background: #8b5cf6;
    color: #ffffff;
  }

  .bg-orange--light.trending {
    background: #ff6647;
    color: #ffffff;
  }

  .bg-green--light {
    background: #00c896;
    color: #ffffff;
  }

  .sale-badge--light.bg-orange {
    background: #ff6647;
    color: #ffffff;
  }

  /* EXACT boat product image wrapper (light) */
  .product-item__image-wrapper--light {
    position: relative;
    overflow: hidden;
  }

  .product-item__aspect-ratio--light.aspect-ratio {
    display: block;
    position: relative;
    overflow: hidden;
    padding-bottom: 100%;
    --aspect-ratio: 1;
  }

  .product-item__primary-image--light {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-item--light.two-point-o.product-item-vertical:hover .product-item__primary-image--light {
    transform: scale(1.04);
  }

  .personalised-icon--light {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 5;
    cursor: pointer;
  }

  .personalised-icon--light img {
    width: 24px;
    height: 24px;
    border-radius: 50%;
  }

  /* EXACT boat product info section (light) */
  .product-item__info--light {
    padding: 14px;
  }

  .product-item-meta--light {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .product-item-meta__reviews-badge--light.text--small.vertical-product__card {
    display: grid;
    grid-template:
      'p_title p_title'
      'p_price p_price'
      'p_variants p_variants';
    gap: 6px;
  }

  .product-item-meta__title--light.tile-title {
    grid-area: p_title;
    font-size: 14px;
    font-weight: 600;
    color: #1a1a1a;
    text-decoration: none;
    line-height: 1.3;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    margin: 0;
  }

  .product-item-meta__title--light.tile-title:hover {
    color: #007aff;
  }

  .product__spliter--light {
    width: 100%;
    height: 1px;
    border: 1px dashed #e3e3e3;
    margin: 3px 0;
  }

  .product-item-meta__price-list-container--light {
    grid-area: p_price;
  }

  .price-list--light.price-list--centered {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
  }

  .price--light.price--highlight.product-card-price {
    font-size: 16px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0;
  }

  .grid--price--light {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .price--light.price--compare.line-through {
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
    font-weight: 400;
  }

  .off--light {
    margin: 0;
    font-size: 10px;
    color: #ff6647;
    font-weight: 600;
  }

  /* EXACT boat color variants (light) */
  .variants-list--light {
    grid-area: p_variants;
    display: flex;
    align-items: center;
    gap: 3px;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .swatch-circle--light {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 1px #ddd;
  }

  .more-colors--light {
    font-size: 10px;
    color: #666;
    font-weight: 500;
  }

  .position-relative--light {
    position: relative;
  }

  .visually-hidden {
    position: absolute !important;
    overflow: hidden;
    clip: rect(0 0 0 0);
    height: 1px;
    width: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
  }

  /* Responsive adjustments (light) */
  @media screen and (max-width: 768px) {
    .product-list__inner--light {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 14px;
    }

    .product-item__info--light {
      padding: 10px;
    }

    .product-item-meta__title--light.tile-title {
      font-size: 12px;
    }

    .price--light.price--highlight.product-card-price {
      font-size: 14px;
    }
  }

  @media screen and (min-width: 1000px) {
    .product-item--light.two-point-o.product-item-vertical .product-item__info--light {
      padding: 14px;
    }
  }
{%- endstyle -%}

<div class="boat-light-carousel-section">
  <div class="boat-light-carousel-container">
    {%- if section.settings.show_header -%}
      <div class="boat-light-carousel-header">
        <h2 class="boat-light-carousel-title">{{ section.settings.title | escape }}</h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="boat-light-carousel-subtitle">{{ section.settings.subtitle | escape }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="product-list__inner--light">
      {%- if section.settings.collection != blank -%}
        {%- for product in section.settings.collection.products limit: section.settings.products_count -%}
          <product-item class="product-item--light two-point-o product-item-vertical">
            <div class="product__wrapper--light">
              <div class="labels-wrapper--light metafeild-label">
                {%- comment -%} Spec Label (Light) {%- endcomment -%}
                {%- if section.settings.show_default_spec -%}
                  {%- assign spec_text = product.metafields.custom.spec_text
                    | default: section.settings.default_spec_text
                  -%}
                  <span class="metafeild-label--light label--highlight custom-label label ui-2">
                    {{ spec_text | escape }}
                  </span>
                {%- endif -%}

                {%- comment -%} Rating (Light) {%- endcomment -%}
                {%- if section.settings.show_ratings -%}
                  <div class="card--rating--light">
                    <div class="rating--light">
                      <div
                        class="rating__stars--light"
                        data-rating="{{ section.settings.default_rating }}"
                        role="img"
                        aria-label="{{ section.settings.default_rating }} {{ section.settings.rating_aria_label_suffix | default: 'out of 5.0 stars' }}"
                      >
                        <span>
                          <img
                            src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/star-5.png?v=1722331088"
                            alt="{{ section.settings.star_alt_text | default: 'star' }}"
                            width="100"
                            height="100"
                            loading="lazy"
                          >
                        </span>
                        {{ section.settings.default_rating }}
                      </div>
                      <span class="rating__caption--light plp-reviews">
                        {{ section.settings.default_reviews }}
                        <span>
                          <img
                            src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/Mask_group-10.png?v=1677571152"
                            alt="{{ section.settings.verified_reviews_alt_text | default: 'verified reviews' }}"
                            width="11"
                            height="11"
                          >
                        </span>
                      </span>
                    </div>
                  </div>
                {%- endif -%}
              </div>

              {%- comment -%} Priority Labels (Light) {%- endcomment -%}
              {%- if section.settings.show_new_launch_badge -%}
                <span
                  class="priority label--light label--highlight custom-label bg-purple--light just launched"
                  style="display: flex; align-items: center;"
                >
                  {{ section.settings.new_launch_emoji | default: '🎉' }}
                  {{ section.settings.new_launch_text | default: 'New Launch' }}
                </span>
              {%- endif -%}

              {%- if section.settings.show_trending_badge -%}
                <span
                  class="priority label--light label--highlight custom-label bg-orange--light trending"
                  style="display: flex; align-items: center;"
                >
                  {{ section.settings.trending_emoji | default: '✨' -}}
                  {{- section.settings.trending_text | default: 'Trending' }}
                </span>
              {%- endif -%}

              {%- if section.settings.show_sale_badge -%}
                <span
                  class="priority label--light label--highlight custom-label sale-badge--light bg-orange"
                  style="display: flex; align-items: center;"
                >
                  {{ section.settings.sale_emoji | default: '💸' }}
                  {{ section.settings.sale_text | default: 'Special Offer' }}
                </span>
              {%- endif -%}

              <div class="product-item__image-wrapper--light">
                {%- if section.settings.show_personalised_icon and product.metafields.custom.personalised == 'true' -%}
                  <span class="personalised-icon--light">
                    <img
                      src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/personalisation_ca8237cd-20ca-4da7-8ad2-7d8a50320b3c.png?v=1724308287"
                      alt="{{ section.settings.personalization_alt_text | default: 'Personalization' }}"
                      loading="lazy"
                      width="29"
                      height="29"
                    >
                  </span>
                {%- endif -%}

                <a
                  href="{{ product.url }}"
                  class="product-item__aspect-ratio--light aspect-ratio"
                  style="padding-bottom: 100.0%; --aspect-ratio: 1"
                >
                  {%- if product.featured_image -%}
                    <img
                      class="product-item__primary-image--light"
                      loading="lazy"
                      width="300"
                      height="300"
                      decoding="async"
                      alt="{{ product.featured_image.alt | escape }}"
                      src="{{ product.featured_image | image_url: width: 300 }}"
                      srcset="{{ product.featured_image | image_url: width: 200 }} 200w, {{ product.featured_image | image_url: width: 400 }} 400w, {{ product.featured_image | image_url: width: 600 }} 600w"
                      sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 300px"
                    >
                  {%- else -%}
                    <div
                      class="product-item__primary-image--light"
                      style="background: #f8f8f8; display: flex; align-items: center; justify-content: center; color: #999;"
                    >
                      {{ section.settings.no_image_text | default: 'No Image' }}
                    </div>
                  {%- endif -%}
                </a>
              </div>
            </div>

            <div class="product-item__info--light">
              <div class="product-item-meta--light">
                <span class="product-item-meta__reviews-badge--light text--small vertical-product__card">
                  <a href="{{ product.url }}" class="product-item-meta__title--light tile-title">
                    {{ product.title | escape }}
                  </a>

                  <div class="product__spliter--light"></div>

                  <div class="product-item-meta__price-list-container--light">
                    <div class="price-list--light price-list--centered">
                      <span class="price--light price--highlight product-card-price" data-price="{{ product.price }}">
                        <span class="visually-hidden">
                          {{- section.settings.sale_price_text | default: 'Sale price' -}}
                        </span>
                        {{- product.price | money }}
                      </span>

                      {%- if product.compare_at_price > product.price -%}
                        <div class="grid--price--light">
                          <span
                            class="price--light price--compare line-through"
                            data-compare-price="{{ product.compare_at_price }}"
                          >
                            <span class="visually-hidden">
                              {{- section.settings.regular_price_text | default: 'Regular price' -}}
                            </span>
                            {{- product.compare_at_price | money }}
                          </span>
                          {%- assign discount_percentage = product.compare_at_price
                            | minus: product.price
                            | times: 100
                            | divided_by: product.compare_at_price
                            | round
                          -%}
                          <p class="m-0 off--light">
                            {{ discount_percentage -}}
                            {{- section.settings.discount_suffix | default: '% off' }}
                          </p>
                        </div>
                      {%- endif -%}
                    </div>
                  </div>

                  {%- comment -%} Color variants EXACT boat style (light) {%- endcomment -%}
                  {%- if product.options contains 'Color' and section.settings.show_color_swatches -%}
                    {%- assign color_option = product.options_by_name.Color -%}
                    {%- if color_option.values.size > 0 -%}
                      <button
                        aria-label="{{ section.settings.color_variants_aria_label | default: 'Open Drawer' }}"
                        class="variants-list--light"
                      >
                        {%- assign colors_shown = 0 -%}
                        {%- for value in color_option.values limit: 2 -%}
                          {%- assign color_handle = value | handle -%}
                          {%- assign color_value = value | downcase -%}
                          <span class="swatch-circle--light" style="background:{{ color_value }}"></span>
                          {%- assign colors_shown = colors_shown | plus: 1 -%}
                        {%- endfor -%}

                        {%- if color_option.values.size > 2 -%}
                          <span class="more-colors--light">+{{ color_option.values.size | minus: 2 }}</span>
                        {%- endif -%}
                      </button>
                    {%- endif -%}
                  {%- endif -%}
                </span>

                <div class="position-relative--light"></div>
              </div>
            </div>
          </product-item>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>


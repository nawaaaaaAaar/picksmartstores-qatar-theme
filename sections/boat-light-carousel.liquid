{%- comment -%}
  🎯 EXACT boat-lifestyle.com Light Carousel Clone
  This is a pixel-perfect replica of boat's actual product carousel structure (light version)
{%- endcomment -%}

{%- style -%}
  .boat-light-carousel-section {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top | default: 40 }}px 0 {{ section.settings.section_padding_bottom | default: 40 }}px;
  }

  .boat-light-carousel-container {
    max-width: {{ section.settings.content_max_width | default: 1400 }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.content_padding_x | default: 20 }}px;
  }

  /* Header matching boat's style */
  .boat-light-carousel-header {
    text-align: {{ section.settings.header_alignment | default: 'center' }};
    margin-bottom: {{ section.settings.header_margin_bottom | default: 25 }}px;
  }

  .boat-light-carousel-title {
    font-size: {{ section.settings.title_size | default: 28 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    color: {{ section.settings.title_color | default: '#1a1a1a' }};
    margin: 0 0 {{ section.settings.title_margin_bottom | default: 8 }}px 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .boat-light-carousel-subtitle {
    color: {{ section.settings.subtitle_color | default: '#666666' }};
    font-size: {{ section.settings.subtitle_size | default: 16 }}px;
    font-weight: {{ section.settings.subtitle_weight | default: 400 }};
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* EXACT boat product list structure */
  .product-list__inner--light {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width | default: 240 }}px, 1fr));
    gap: {{ section.settings.grid_gap | default: 20 }}px;
  }

  /* EXACT boat product-item styling (light version) */
  .product-item--light {
    background: #ffffff;
    border-radius: 10px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
  }

  .product-item--light:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .product__wrapper--light {
    position: relative;
  }

  /* Labels system matching boat exactly (light version) */
  .labels-wrapper--light {
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .metafeild-label--light {
    background: {{ section.settings.spec_background | default: '#ffd700' }};
    color: {{ section.settings.spec_color | default: '#1a1a1a' }};
    padding: 3px 6px;
    border-radius: 3px;
    font-size: 9px;
    font-weight: 600;
    width: fit-content;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .card--rating--light {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(6px);
    border-radius: 5px;
    padding: 4px 6px;
    width: fit-content;
  }

  .rating--light {
    display: flex;
    align-items: center;
    gap: 3px;
  }

  .rating__stars--light {
    display: flex;
    align-items: center;
    gap: 1px;
    font-size: 10px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .rating__caption--light {
    font-size: 9px !important;
    color: #666;
    display: flex;
    align-items: center;
    gap: 2px;
  }

  /* Priority labels matching boat (light version) */
  .priority.label--light {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 9px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 3px;
    width: fit-content;
  }

  .bg-purple--light {
    background: #8b5cf6;
    color: #ffffff;
  }

  .bg-orange--light {
    background: #ff6647;
    color: #ffffff;
  }

  .bg-green--light {
    background: #00c896;
    color: #ffffff;
  }

  /* Product image wrapper (light) */
  .product-item__image-wrapper--light {
    position: relative;
    overflow: hidden;
  }

  .product-item__aspect-ratio--light {
    display: block;
    position: relative;
    overflow: hidden;
  }

  .product-item__primary-image--light {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-item--light:hover .product-item__primary-image--light {
    transform: scale(1.04);
  }

  .personalised-icon--light {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 5;
  }

  /* Product info section (light) */
  .product-item__info--light {
    padding: 14px;
  }

  .product-item-meta--light {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .product-item-meta__title--light {
    font-size: 14px;
    font-weight: 600;
    color: #1a1a1a;
    text-decoration: none;
    line-height: 1.3;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .product-item-meta__title--light:hover {
    color: #007aff;
  }

  .product__spliter--light {
    height: 1px;
    background: #e5e5e5;
    margin: 6px 0;
  }

  /* Price styling matching boat exactly (light) */
  .price-list--light {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .price--highlight--light {
    font-size: 16px;
    font-weight: 700;
    color: #1a1a1a;
  }

  .grid--price--light {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .price--compare--light {
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
  }

  .off--light {
    font-size: 10px;
    font-weight: 600;
    color: #00c896;
    margin: 0;
  }

  /* Color swatches matching boat exactly (light) */
  .variants-list--light {
    background: none;
    border: none;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 5px;
    cursor: pointer;
  }

  .swatch-circle--light {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 2px solid #ffffff;
    box-shadow: 0 0 0 1px #e0e0e0;
    transition: transform 0.2s ease;
  }

  .swatch-circle--light:hover {
    transform: scale(1.1);
  }

  .more-colors--light {
    font-size: 10px;
    color: #666;
    font-weight: 500;
    margin-left: 2px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .boat-light-carousel-title {
      font-size: 22px;
    }

    .product-list__inner--light {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 14px;
    }

    .boat-light-carousel-header {
      margin-bottom: 20px;
    }
  }

  @media (max-width: 480px) {
    .product-list__inner--light {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 10px;
    }
  }
{%- endstyle -%}

<div class="boat-light-carousel-section">
  <div class="boat-light-carousel-container">
    {%- if section.settings.show_header -%}
      <div class="boat-light-carousel-header">
        {%- if section.settings.title != blank -%}
          <h2 class="boat-light-carousel-title">{{ section.settings.title | escape }}</h2>
        {%- endif -%}

        {%- if section.settings.subtitle != blank -%}
          <p class="boat-light-carousel-subtitle">{{ section.settings.subtitle | escape }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="product-list__inner--light">
      {%- if section.settings.collection != blank -%}
        {%- assign collection = collections[section.settings.collection] -%}
        {%- assign products_to_show = section.settings.products_count | default: 4 -%}

        {%- for product in collection.products limit: products_to_show -%}
          <product-item class="product-item--light two-point-o product-item-vertical">
            <div class="product__wrapper--light">
              <div class="labels-wrapper--light metafeild-label">
                {%- comment -%} Product spec label {%- endcomment -%}
                {%- if product.metafields.custom.spec_label != blank -%}
                  <span class="metafeild-label--light label--highlight custom-label label ui-2">
                    {{ product.metafields.custom.spec_label }}
                  </span>
                {%- elsif section.settings.show_default_spec -%}
                  <span class="metafeild-label--light label--highlight custom-label label ui-2">
                    {{ section.settings.default_spec_text | default: 'Premium Quality' }}
                  </span>
                {%- endif -%}

                {%- comment -%} Rating display {%- endcomment -%}
                {%- if section.settings.show_ratings -%}
                  <div class="card--rating--light">
                    <div class="rating--light">
                      <div
                        class="rating__stars--light"
                        data-rating="{{ section.settings.default_rating | default: '4.7' }}"
                        role="img"
                        aria-label="{{ section.settings.default_rating | default: '4.7' }} {{ section.settings.rating_aria_label_suffix | default: 'out of 5.0 stars' }}"
                      >
                        <span>
                          <img
                            src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/star-5.png?v=1722331088"
                            alt="{{ section.settings.star_alt_text | default: 'star' }}"
                            width="100"
                            height="100"
                            loading="lazy"
                            style="width: 12px;display: inline-block;vertical-align: bottom;"
                          >
                        </span>
                        {{ section.settings.default_rating | default: '4.7' }}
                      </div>
                      <span class="rating__caption--light plp-reviews">
                        {{ section.settings.default_reviews | default: '89' }}
                        <span
                          ><img
                            src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/Mask_group-10.png?v=1677571152"
                            style="width:9px;height:9px;"
                            alt="{{ section.settings.verified_reviews_alt_text | default: 'verified reviews' }}"
                            width="9"
                            height="9"
                        ></span>
                      </span>
                    </div>
                  </div>
                {%- endif -%}

                {%- comment -%} Priority labels {%- endcomment -%}
                {%- if product.tags contains 'new-launch' or section.settings.show_new_launch_badge -%}
                  <span
                    class="priority label--light z-4 label--highlight custom-label bg-purple--light just launched"
                    style="display: flex; align-items: center;"
                  >
                    {{ section.settings.new_launch_emoji | default: '🎉' }}
                    {{ section.settings.new_launch_text | default: 'New Launch' }}
                  </span>
                {%- endif -%}

                {%- if product.tags contains 'trending' or section.settings.show_trending_badge -%}
                  <span
                    class="priority label--light z-6 label--highlight custom-label bg-orange--light trending"
                    style="display: flex; align-items: center;"
                  >
                    {{ section.settings.trending_emoji | default: '✨' -}}
                    {{- section.settings.trending_text | default: 'Trending' }}
                  </span>
                {%- endif -%}

                {%- if product.tags contains 'sale' or section.settings.show_sale_badge -%}
                  <span
                    class="priority label--light z-10 label--highlight custom-label free-label bg-green--light"
                    style="display: flex; align-items: center;"
                  >
                    {{ section.settings.sale_emoji | default: '💸' }}
                    {{ section.settings.sale_text | default: 'Special Offer' }}
                  </span>
                {%- endif -%}

                <div class="product-item__image-wrapper--light">
                  {%- if product.tags contains 'personalised' or section.settings.show_personalised_icon -%}
                    <span class="personalised-icon--light">
                      <img
                        src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/personalisation_ca8237cd-20ca-4da7-8ad2-7d8a50320b3c.png?v=1724308287"
                        alt="{{ section.settings.personalization_alt_text | default: 'Personalization' }}"
                        loading="lazy"
                        width="25"
                        height="25"
                      >
                    </span>
                  {%- endif -%}

                  <a
                    href="{{ product.url }}"
                    class="product-item__aspect-ratio--light aspect-ratio"
                    style="padding-bottom: 100.0%; --aspect-ratio: 1"
                  >
                    {%- if product.featured_media -%}
                      <img
                        class="product-item__primary-image--light"
                        loading="lazy"
                        width="250"
                        height="250"
                        decoding="async"
                        alt="{{ product.featured_media.alt | escape }}"
                        src="{{ product.featured_media | image_url: width: 500 }}"
                        srcset="
                          {{ product.featured_media | image_url: width: 200 }} 200w,
                          {{ product.featured_media | image_url: width: 300 }} 300w,
                          {{ product.featured_media | image_url: width: 500 }} 500w
                        "
                        sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 250px"
                      >
                    {%- else -%}
                      <div
                        class="product-item__primary-image--light"
                        style="background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;"
                      >
                        {{ section.settings.no_image_text | default: 'No Image' }}
                      </div>
                    {%- endif -%}
                  </a>
                </div>
              </div>
            </div>

            <div class="product-item__info--light">
              <div class="product-item-meta--light">
                <span class="product-item-meta__reviews-badge text--small vertical-product__card">
                  <a href="{{ product.url }}" class="product-item-meta__title--light tile-title">
                    {{ product.title | escape }}
                  </a>

                  <div class="product__spliter--light"></div>

                  <div class="product-item-meta__price-list-container">
                    <div class="price-list--light price-list--centered">
                      <span class="price--highlight--light product-card-price" data-price="{{ product.price }}">
                        <span class="visually-hidden">
                          {{- section.settings.sale_price_text | default: 'Sale price' -}}
                        </span>
                        {{- product.price | money }}
                      </span>

                      {%- if product.compare_at_price > product.price -%}
                        <div class="grid--price--light">
                          <span
                            class="price--compare--light line-through"
                            data-compare-price="{{ product.compare_at_price }}"
                          >
                            <span class="visually-hidden">
                              {{- section.settings.regular_price_text | default: 'Regular price' -}}
                            </span>
                            {{- product.compare_at_price | money }}
                          </span>
                          {%- assign discount_percentage = product.compare_at_price
                            | minus: product.price
                            | times: 100
                            | divided_by: product.compare_at_price
                            | round
                          -%}
                          <p class="m-0 off--light">
                            {{ discount_percentage -}}
                            {{- section.settings.discount_suffix | default: '% off' }}
                          </p>
                        </div>
                      {%- endif -%}
                    </div>
                  </div>

                  {%- comment -%} Color variants {%- endcomment -%}
                  {%- if product.options contains 'Color' and section.settings.show_color_swatches -%}
                    {%- assign color_option = product.options_by_name.Color -%}
                    {%- if color_option.values.size > 0 -%}
                      <button
                        aria-label="{{ section.settings.color_variants_aria_label | default: 'Open Drawer' }}"
                        class="variants-list--light"
                      >
                        {%- assign colors_shown = 0 -%}
                        {%- for value in color_option.values limit: 2 -%}
                          {%- assign color_handle = value | handle -%}
                          {%- assign color_value = value | downcase -%}
                          <span class="swatch-circle--light" style="background:{{ color_value }}"></span>
                          {%- assign colors_shown = colors_shown | plus: 1 -%}
                        {%- endfor -%}

                        {%- if color_option.values.size > 2 -%}
                          <span class="more-colors--light">+{{ color_option.values.size | minus: 2 }}</span>
                        {%- endif -%}
                      </button>
                    {%- endif -%}
                  {%- endif -%}
                </span>

                <div class="position-relative"></div>
              </div>
            </div>
          </product-item>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>


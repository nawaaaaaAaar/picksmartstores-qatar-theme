{%- comment -%}
  üéØ boat-lifestyle.com EXACT Light Carousel
  Clean, professional, minimalist design matching boat's precise aesthetic
{%- endcomment -%}

{%- style -%}
  .boat-light-carousel-wrapper {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top | default: 40 }}px 0 {{ section.settings.section_padding_bottom | default: 40 }}px;
    position: relative;
  }

  .boat-light-carousel-content {
    max-width: {{ section.settings.content_max_width | default: 1400 }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.content_padding_x | default: 20 }}px;
  }

  /* ‚ú® EXACT boat Header Design */
  .boat-light-carousel-header {
    text-align: {{ section.settings.header_alignment | default: 'center' }};
    margin-bottom: {{ section.settings.header_margin_bottom | default: 30 }}px;
  }

  .boat-light-carousel-title {
    color: {{ section.settings.title_color | default: '#1a1a1a' }};
    font-size: {{ section.settings.title_size | default: 28 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    margin: 0 0 {{ section.settings.title_margin_bottom | default: 8 }}px 0;
    font-family: {{ section.settings.title_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
    letter-spacing: {{ section.settings.title_letter_spacing | default: -0.5 }}px;
  }

  .boat-light-carousel-subtitle {
    color: {{ section.settings.subtitle_color | default: '#666666' }};
    font-size: {{ section.settings.subtitle_size | default: 16 }}px;
    font-weight: {{ section.settings.subtitle_weight | default: 400 }};
    margin: 0;
    font-family: {{ section.settings.subtitle_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  /* üéØ EXACT boat Product Grid */
  .boat-light-product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width | default: 240 }}px, 1fr));
    gap: {{ section.settings.grid_gap | default: 20 }}px;
  }

  /* üèÜ EXACT boat Product Card Design */
  .boat-light-product-card {
    background: {{ section.settings.card_background | default: '#ffffff' }};
    border-radius: {{ section.settings.card_border_radius | default: 12 }}px;
    padding: {{ section.settings.card_padding | default: 16 }}px;
    transition: all {{ section.settings.card_hover_duration | default: 0.2 }}s ease;
    border: {{ section.settings.card_border_width | default: 1 }}px solid {{ section.settings.card_border_color | default: '#e5e5e5' }};
    position: relative;
    overflow: hidden;
    box-shadow: {{ section.settings.card_shadow | default: '0 2px 8px rgba(0, 0, 0, 0.06)' }};
  }

  .boat-light-product-card:hover {
    transform: translateY(-{{ section.settings.card_hover_lift | default: 4 }}px);
    box-shadow: {{ section.settings.card_hover_shadow | default: '0 8px 24px rgba(0, 0, 0, 0.12)' }};
    border-color: {{ section.settings.card_hover_border_color | default: '#d0d0d0' }};
  }

  /* üì∏ Clean Product Image Container */
  .boat-light-product-image-container {
    position: relative;
    margin-bottom: {{ section.settings.image_margin_bottom | default: 12 }}px;
    border-radius: {{ section.settings.image_container_radius | default: 8 }}px;
    overflow: hidden;
    background: {{ section.settings.image_container_bg | default: '#f8f9fa' }};
  }

  .boat-light-product-image {
    width: 100%;
    height: {{ section.settings.image_height | default: 180 }}px;
    object-fit: {{ section.settings.image_fit | default: 'cover' }};
    transition: transform {{ section.settings.image_hover_duration | default: 0.3 }}s ease;
  }

  .boat-light-product-card:hover .boat-light-product-image {
    transform: scale({{ section.settings.image_hover_scale | default: 1.05 }});
  }

  /* üé® EXACT boat Badge System */
  .boat-light-product-badge {
    position: absolute;
    top: {{ section.settings.badge_position_top | default: 8 }}px;
    left: {{ section.settings.badge_position_left | default: 8 }}px;
    padding: {{ section.settings.badge_padding_y | default: 4 }}px {{ section.settings.badge_padding_x | default: 8 }}px;
    border-radius: {{ section.settings.badge_border_radius | default: 4 }}px;
    font-size: {{ section.settings.badge_font_size | default: 10 }}px;
    font-weight: {{ section.settings.badge_font_weight | default: 600 }};
    text-transform: {{ section.settings.badge_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.badge_letter_spacing | default: 0.5 }}px;
    z-index: 2;
    font-family: {{ section.settings.badge_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  .boat-light-badge-new {
    background: {{ section.settings.badge_new_bg | default: '#1a1a1a' }};
    color: {{ section.settings.badge_new_color | default: '#ffffff' }};
  }

  .boat-light-badge-trending {
    background: {{ section.settings.badge_trending_bg | default: '#ff6647' }};
    color: {{ section.settings.badge_trending_color | default: '#ffffff' }};
  }

  .boat-light-badge-sale {
    background: {{ section.settings.badge_sale_bg | default: '#00c896' }};
    color: {{ section.settings.badge_sale_color | default: '#ffffff' }};
  }

  /* ‚ö° boat Spec Display */
  .boat-light-product-spec {
    position: absolute;
    bottom: {{ section.settings.spec_position_bottom | default: 8 }}px;
    left: {{ section.settings.spec_position_left | default: 8 }}px;
    background: {{ section.settings.spec_background | default: '#ffd700' }};
    color: {{ section.settings.spec_color | default: '#1a1a1a' }};
    padding: {{ section.settings.spec_padding_y | default: 3 }}px {{ section.settings.spec_padding_x | default: 6 }}px;
    border-radius: {{ section.settings.spec_border_radius | default: 3 }}px;
    font-size: {{ section.settings.spec_font_size | default: 9 }}px;
    font-weight: {{ section.settings.spec_font_weight | default: 600 }};
    z-index: 2;
    font-family: {{ section.settings.spec_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  /* üìù Clean Product Info */
  .boat-light-product-info {
    color: {{ section.settings.product_info_color | default: '#1a1a1a' }};
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.info_gap | default: 6 }}px;
  }

  .boat-light-product-title {
    font-size: {{ section.settings.product_title_size | default: 14 }}px;
    font-weight: {{ section.settings.product_title_weight | default: 600 }};
    color: {{ section.settings.product_title_color | default: '#1a1a1a' }};
    line-height: {{ section.settings.product_title_line_height | default: 1.3 }};
    margin: 0;
    font-family: {{ section.settings.product_title_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  .boat-light-product-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .boat-light-product-title a:hover {
    color: {{ section.settings.product_title_hover_color | default: '#007aff' }};
  }

  /* üé® EXACT boat Color Swatches */
  .boat-light-color-swatches {
    display: flex;
    gap: {{ section.settings.color_swatch_gap | default: 4 }}px;
    align-items: center;
    flex-wrap: wrap;
  }

  .boat-light-color-swatch {
    width: {{ section.settings.color_swatch_size | default: 16 }}px;
    height: {{ section.settings.color_swatch_size | default: 16 }}px;
    border-radius: 50%;
    border: {{ section.settings.color_swatch_border_width | default: 2 }}px solid {{ section.settings.color_swatch_border_color | default: '#ffffff' }};
    box-shadow: 0 0 0 1px {{ section.settings.color_swatch_outline | default: '#e0e0e0' }};
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .boat-light-color-swatch:hover {
    transform: scale({{ section.settings.color_swatch_hover_scale | default: 1.1 }});
  }

  .boat-light-color-swatch.active {
    transform: scale({{ section.settings.color_swatch_active_scale | default: 1.1 }});
    box-shadow: 0 0 0 2px {{ section.settings.color_swatch_active_color | default: '#007aff' }};
  }

  .boat-light-color-count {
    font-size: {{ section.settings.color_count_size | default: 11 }}px;
    color: {{ section.settings.color_count_color | default: '#666666' }};
    font-weight: {{ section.settings.color_count_weight | default: 500 }};
    font-family: {{ section.settings.color_count_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  /* ‚≠ê EXACT boat Rating System */
  .boat-light-product-rating {
    display: flex;
    align-items: center;
    gap: {{ section.settings.rating_gap | default: 4 }}px;
  }

  .boat-light-rating-stars {
    color: {{ section.settings.rating_star_color | default: '#ffd700' }};
    font-size: {{ section.settings.rating_star_size | default: 12 }}px;
  }

  .boat-light-rating-number {
    background: {{ section.settings.rating_bg | default: '#ffd700' }};
    color: {{ section.settings.rating_color | default: '#1a1a1a' }};
    padding: {{ section.settings.rating_padding_y | default: 1 }}px {{ section.settings.rating_padding_x | default: 4 }}px;
    border-radius: {{ section.settings.rating_border_radius | default: 3 }}px;
    font-size: {{ section.settings.rating_font_size | default: 9 }}px;
    font-weight: {{ section.settings.rating_font_weight | default: 600 }};
    font-family: {{ section.settings.rating_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  /* üí∞ EXACT boat Price Display */
  .boat-light-product-price {
    display: flex;
    align-items: center;
    gap: {{ section.settings.price_gap | default: 6 }}px;
    flex-wrap: wrap;
  }

  .boat-light-current-price {
    font-size: {{ section.settings.current_price_size | default: 16 }}px;
    font-weight: {{ section.settings.current_price_weight | default: 700 }};
    color: {{ section.settings.current_price_color | default: '#1a1a1a' }};
    font-family: {{ section.settings.current_price_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  .boat-light-original-price {
    font-size: {{ section.settings.original_price_size | default: 12 }}px;
    color: {{ section.settings.original_price_color | default: '#999999' }};
    text-decoration: line-through;
    font-family: {{ section.settings.original_price_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  .boat-light-discount-percent {
    background: {{ section.settings.discount_bg | default: '#00c896' }};
    color: {{ section.settings.discount_color | default: '#ffffff' }};
    padding: {{ section.settings.discount_padding_y | default: 1 }}px {{ section.settings.discount_padding_x | default: 4 }}px;
    border-radius: {{ section.settings.discount_border_radius | default: 3 }}px;
    font-size: {{ section.settings.discount_font_size | default: 9 }}px;
    font-weight: {{ section.settings.discount_font_weight | default: 600 }};
    font-family: {{ section.settings.discount_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
  }

  /* üõí EXACT boat Add to Cart Button */
  .boat-light-add-to-cart {
    width: 100%;
    background: {{ section.settings.button_bg | default: '#e53e3e' }};
    color: {{ section.settings.button_color | default: '#ffffff' }};
    border: none;
    padding: {{ section.settings.button_padding_y | default: 10 }}px {{ section.settings.button_padding_x | default: 14 }}px;
    border-radius: {{ section.settings.button_border_radius | default: 6 }}px;
    font-weight: {{ section.settings.button_font_weight | default: 600 }};
    font-size: {{ section.settings.button_font_size | default: 12 }}px;
    cursor: pointer;
    transition: all {{ section.settings.button_hover_duration | default: 0.2 }}s ease;
    text-transform: {{ section.settings.button_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.button_letter_spacing | default: 0.5 }}px;
    font-family: {{ section.settings.button_font | default: 'Inter, -apple-system, BlinkMacSystemFont, sans-serif' }};
    margin-top: {{ section.settings.button_margin_top | default: 8 }}px;
  }

  .boat-light-add-to-cart:hover {
    background: {{ section.settings.button_hover_bg | default: '#c53030' }};
    transform: translateY(-{{ section.settings.button_hover_lift | default: 1 }}px);
  }

  .boat-light-add-to-cart:active {
    transform: translateY(0);
  }

  /* üì± boat Responsive Design */
  @media screen and (max-width: 1200px) {
    .boat-light-product-grid {
      grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width_tablet | default: 200 }}px, 1fr));
      gap: {{ section.settings.grid_gap_tablet | default: 16 }}px;
    }
  }

  @media screen and (max-width: 768px) {
    .boat-light-carousel-wrapper {
      padding: {{ section.settings.section_padding_top_mobile | default: 30 }}px 0 {{ section.settings.section_padding_bottom_mobile | default: 30 }}px;
    }

    .boat-light-carousel-title {
      font-size: {{ section.settings.title_size_mobile | default: 22 }}px;
    }

    .boat-light-product-grid {
      grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width_mobile | default: 240 }}px, 1fr));
      gap: {{ section.settings.grid_gap_mobile | default: 14 }}px;
    }

    .boat-light-product-image {
      height: {{ section.settings.image_height_mobile | default: 160 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .boat-light-product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.grid_gap_small | default: 12 }}px;
    }

    .boat-light-product-card {
      padding: {{ section.settings.card_padding_small | default: 12 }}px;
    }

    .boat-light-product-image {
      height: {{ section.settings.image_height_small | default: 140 }}px;
    }

    .boat-light-current-price {
      font-size: {{ section.settings.current_price_size_small | default: 14 }}px;
    }
  }

  /* ‚ôø Accessibility & Motion */
  @media (prefers-reduced-motion: reduce) {
    .boat-light-product-card,
    .boat-light-product-image,
    .boat-light-add-to-cart,
    .boat-light-color-swatch {
      transition: none;
    }
  }

  @media (prefers-contrast: high) {
    .boat-light-product-card {
      border-color: #000000;
    }

    .boat-light-add-to-cart {
      border: 2px solid #ffffff;
    }
  }
{%- endstyle -%}

<div class="boat-light-carousel-wrapper">
  <div class="boat-light-carousel-content">
    <div class="boat-light-carousel-header">
      {%- if section.settings.title != blank -%}
        <h2 class="boat-light-carousel-title">{{ section.settings.title }}</h2>
      {%- endif -%}

      {%- if section.settings.subtitle != blank -%}
        <p class="boat-light-carousel-subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="boat-light-product-grid">
      {%- liquid
        assign collection = collections[section.settings.collection]
        if collection == blank
          assign collection = collections.all
        endif

        assign products_to_show = section.settings.products_to_show | default: 4
        assign badge_types = 'new,trending,sale' | split: ','
        assign badge_labels = 'New,Trending,Sale' | split: ','
        assign specs = '50 Hours,BT Calling,Fast Charging,Water Resistant' | split: ','
      -%}

      {%- for product in collection.products limit: products_to_show -%}
        {%- assign random_badge = forloop.index0 | modulo: 3 -%}
        {%- assign random_spec = forloop.index0 | modulo: 4 -%}
        {%- assign random_rating = '4.6,4.8,4.5,4.7' | split: ',' -%}
        {%- assign product_rating = random_rating[forloop.index0] | default: '4.6' -%}

        <div class="boat-light-product-card">
          <div class="boat-light-product-image-container">
            {%- comment -%} Product Badge {%- endcomment -%}
            <div class="boat-light-product-badge boat-light-badge-{{ badge_types[random_badge] }}">
              {{ badge_labels[random_badge] }}
            </div>

            {%- comment -%} Product Spec {%- endcomment -%}
            <div class="boat-light-product-spec">
              {{ specs[random_spec] }}
            </div>

            <a href="{{ product.url }}">
              <img
                src="{{ product.featured_image | image_url: width: 300 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="boat-light-product-image"
                width="300"
                height="300"
                loading="lazy"
              >
            </a>
          </div>

          <div class="boat-light-product-info">
            <h3 class="boat-light-product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>

            {%- comment -%} Color Swatches {%- endcomment -%}
            {%- if product.options contains 'Color' -%}
              <div class="boat-light-color-swatches">
                {%- assign color_count = 0 -%}
                {%- for option in product.options -%}
                  {%- if option == 'Color' -%}
                    {%- assign color_values = product.option_by_name[option].values -%}
                    {%- assign color_count = color_values.size -%}
                    {%- for color in color_values limit: 3 -%}
                      {%- assign color_lower = color | downcase -%}
                      {%- assign color_hex = '#000000' -%}
                      {%- case color_lower -%}
                        {%- when 'black' -%}
                          {%- assign color_hex = '#000000' -%}
                        {%- when 'blue' -%}
                          {%- assign color_hex = '#3b82f6' -%}
                        {%- when 'green' -%}
                          {%- assign color_hex = '#10b981' -%}
                        {%- when 'red' -%}
                          {%- assign color_hex = '#ef4444' -%}
                        {%- when 'white' -%}
                          {%- assign color_hex = '#ffffff' -%}
                        {%- when 'gray', 'grey' -%}
                          {%- assign color_hex = '#6b7280' -%}
                        {%- when 'purple' -%}
                          {%- assign color_hex = '#8b5cf6' -%}
                        {%- when 'yellow' -%}
                          {%- assign color_hex = '#fbbf24' -%}
                        {%- when 'pink' -%}
                          {%- assign color_hex = '#ec4899' -%}
                        {%- when 'orange' -%}
                          {%- assign color_hex = '#f97316' -%}
                        {%- else -%}
                          {%- assign color_hex = '#6b7280' -%}
                      {%- endcase -%}
                      <div
                        class="boat-light-color-swatch{% if forloop.first %} active{% endif %}"
                        style="background-color: {{ color_hex }};"
                        title="{{ color }}"
                      ></div>
                    {%- endfor -%}
                    {%- if color_count > 3 -%}
                      <span class="boat-light-color-count">+{{ color_count | minus: 3 }}</span>
                    {%- endif -%}
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- else -%}
              {%- comment -%} Default color swatches if no color option {%- endcomment -%}
              <div class="boat-light-color-swatches">
                <div class="boat-light-color-swatch active" style="background-color: #000000;" title="Black"></div>
                <div class="boat-light-color-swatch" style="background-color: #3b82f6;" title="Blue"></div>
                <span class="boat-light-color-count">+{{ forloop.index | modulo: 2 | plus: 1 }}</span>
              </div>
            {%- endif -%}

            {%- comment -%} Rating {%- endcomment -%}
            <div class="boat-light-product-rating">
              <div class="boat-light-rating-stars">‚òÖ</div>
              <div class="boat-light-rating-number">{{ product_rating }}</div>
            </div>

            <div class="boat-light-product-price">
              <span class="boat-light-current-price">{{ product.price | money }}</span>
              {%- if product.compare_at_price > product.price -%}
                <span class="boat-light-original-price">{{ product.compare_at_price | money }}</span>
                {%- assign discount = product.compare_at_price
                  | minus: product.price
                  | times: 100.0
                  | divided_by: product.compare_at_price
                  | round
                -%}
                <span class="boat-light-discount-percent">{{ discount }}% off</span>
              {%- endif -%}
            </div>

            {%- if section.settings.show_add_to_cart -%}
              <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" class="boat-light-add-to-cart">Add to Cart</button>
              </form>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>


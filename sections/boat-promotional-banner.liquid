{%- style -%}
  #shopify-section-{{ section.id }} .boat-promo-banner {
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_y }}px 0;
    text-align: {{ section.settings.text_alignment }};
    position: relative;
    overflow: hidden;
    margin-bottom: {{ section.settings.section_margin }}px;
  }

  #shopify-section-{{ section.id }} .boat-promo-content {
    position: relative;
    z-index: 2;
  }

  #shopify-section-{{ section.id }} .boat-promo-title {
    font-family: var(--boat-font-primary);
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    margin-bottom: {{ section.settings.title_margin }}px;
    text-transform: {{ section.settings.title_transform }};
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
  }

  #shopify-section-{{ section.id }} .boat-promo-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: {{ section.settings.subtitle_weight }};
    margin-bottom: {{ section.settings.subtitle_margin }}px;
    opacity: {{ section.settings.subtitle_opacity | divided_by: 100.0 }};
  }

  #shopify-section-{{ section.id }} .boat-promo-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    font-family: var(--boat-font-primary);
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 700;
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: 2px solid {{ section.settings.button_border }};
  }

  #shopify-section-{{ section.id }} .boat-promo-button:hover {
    background: {{ section.settings.button_bg_hover }};
    color: {{ section.settings.button_text_hover }};
    border-color: {{ section.settings.button_border_hover }};
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .boat-promo-banner {
      padding: {{ section.settings.mobile_padding }}px 0;
    }

    #shopify-section-{{ section.id }} .boat-promo-title {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    #shopify-section-{{ section.id }} .boat-promo-subtitle {
      font-size: {{ section.settings.mobile_subtitle_size }}px;
    }

    #shopify-section-{{ section.id }} .boat-promo-button {
      font-size: {{ section.settings.mobile_button_size }}px;
      padding: {{ section.settings.mobile_button_padding }}px;
    }
  }
{%- endstyle -%}

<div class="boat-promo-banner">
  <div class="boat-container">
    <div class="boat-promo-content">
      {% if section.settings.title != blank %}
        <h2 class="boat-promo-title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="boat-promo-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_url | default: '#' }}" class="boat-promo-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>


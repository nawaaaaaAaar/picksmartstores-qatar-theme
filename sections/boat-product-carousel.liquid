{%- comment -%}
  üî• Premium boAt Product Carousel Section
  Sophisticated product cards with advanced styling and premium visual effects
{%- endcomment -%}

{%- style -%}
  .boat-carousel-wrapper {
    background: {% if section.settings.background_type == 'gradient' %}
      {{ section.settings.background_gradient | default: 'linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #000000 100%)' }}
    {% elsif section.settings.background_type == 'image' and section.settings.background_image != blank %}
      linear-gradient({{ section.settings.overlay_opacity | default: 70 }}deg,
      rgba({{ section.settings.overlay_color | default: '0, 0, 0' | color_extract: 'red' }}, {{ section.settings.overlay_color | default: '0, 0, 0' | color_extract: 'green' }}, {{ section.settings.overlay_color | default: '0, 0, 0' | color_extract: 'blue' }}, {{ section.settings.overlay_opacity | default: 0.7 }}),
      rgba({{ section.settings.overlay_color | default: '0, 0, 0' | color_extract: 'red' }}, {{ section.settings.overlay_color | default: '0, 0, 0' | color_extract: 'green' }}, {{ section.settings.overlay_color | default: '0, 0, 0' | color_extract: 'blue' }}, {{ section.settings.overlay_opacity | default: 0.7 }})),
      url('{{ section.settings.background_image | image_url: width: 1920 }}')
    {% else %}
      {{ section.settings.background_color | default: '#1a1a1a' }}
    {% endif %};
    background-size: cover;
    background-position: center;
    background-attachment: {{ section.settings.background_attachment | default: 'scroll' }};
    padding: {{ section.settings.section_padding_top | default: 60 }}px 0 {{ section.settings.section_padding_bottom | default: 60 }}px;
    position: relative;
    overflow: hidden;
    min-height: {{ section.settings.section_min_height | default: 600 }}px;
  }

  /* Advanced Pattern Overlay */
  .boat-carousel-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {% if section.settings.enable_pattern_overlay %}
      radial-gradient(circle at 25% 25%, {{ section.settings.pattern_color_1 | default: 'rgba(217, 35, 45, 0.1)' }} 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, {{ section.settings.pattern_color_2 | default: 'rgba(0, 181, 148, 0.1)' }} 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, {{ section.settings.pattern_color_3 | default: 'rgba(255, 255, 255, 0.05)' }} 0%, transparent 70%)
    {% else %}
      transparent
    {% endif %};
    animation: {% if section.settings.enable_pattern_animation %}patternFloat {{ section.settings.pattern_animation_duration | default: 20 }}s ease-in-out infinite{% else %}none{% endif %};
    pointer-events: none;
    z-index: 1;
  }

  @keyframes patternFloat {
    0%, 100% { transform: translate(0, 0) rotate(0deg) scale(1); }
    25% { transform: translate(10px, -10px) rotate(1deg) scale(1.02); }
    50% { transform: translate(-5px, 10px) rotate(-0.5deg) scale(1.01); }
    75% { transform: translate(-10px, -5px) rotate(0.5deg) scale(1.03); }
  }

  .boat-carousel-content {
    max-width: {{ section.settings.content_max_width | default: 1400 }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* Premium Header Styling */
  .boat-carousel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ section.settings.header_margin_bottom | default: 40 }}px;
    padding: 0 {{ section.settings.content_padding_x | default: 20 }}px;
  }

  .boat-carousel-title {
    color: {{ section.settings.title_color | default: '#ffffff' }};
    font-size: {{ section.settings.title_size | default: 32 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    margin: 0;
    {% if section.settings.enable_title_gradient %}
      background: {{ section.settings.title_gradient | default: 'linear-gradient(45deg, #ffffff, #d9232d)' }};
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    {% endif %}
    text-shadow: {{ section.settings.title_text_shadow | default: '0 2px 10px rgba(0, 0, 0, 0.3)' }};
    letter-spacing: {{ section.settings.title_letter_spacing | default: -0.5 }}px;
  }

  .boat-view-all-link {
    color: {{ section.settings.view_all_color | default: '#d9232d' }};
    text-decoration: none;
    font-weight: {{ section.settings.view_all_weight | default: 600 }};
    font-size: {{ section.settings.view_all_size | default: 16 }}px;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    padding: 8px 16px;
    border: 1px solid {{ section.settings.view_all_border_color | default: 'rgba(217, 35, 45, 0.3)' }};
    border-radius: 8px;
    backdrop-filter: blur(10px);
    background: {{ section.settings.view_all_bg | default: 'rgba(255, 255, 255, 0.1)' }};
  }

  .boat-view-all-link:hover {
    background: {{ section.settings.view_all_hover_bg | default: '#d9232d' }};
    color: {{ section.settings.view_all_hover_color | default: '#ffffff' }};
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(217, 35, 45, 0.3);
  }

  /* Premium Product Grid */
  .boat-product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width | default: 280 }}px, 1fr));
    gap: {{ section.settings.grid_gap | default: 24 }}px;
    padding: 0 {{ section.settings.content_padding_x | default: 20 }}px;
  }

  /* ‚≠ê PREMIUM PRODUCT CARD DESIGN */
  .boat-product-card {
    background: {{ section.settings.card_background | default: 'rgba(255, 255, 255, 0.98)' }};
    border-radius: {{ section.settings.card_border_radius | default: 20 }}px;
    padding: {{ section.settings.card_padding | default: 20 }}px;
    transition: all {{ section.settings.card_hover_duration | default: 0.5 }}s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border: {{ section.settings.card_border_width | default: 1 }}px solid {{ section.settings.card_border_color | default: 'rgba(255, 255, 255, 0.2)' }};
    position: relative;
    overflow: hidden;
    min-height: {{ section.settings.card_min_height | default: 460 }}px;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur({{ section.settings.card_backdrop_blur | default: 15 }}px);
    {%- if section.settings.card_shadow_enable -%}
      box-shadow: {{ section.settings.card_shadow | default: '0 8px 32px rgba(0, 0, 0, 0.12), 0 2px 8px rgba(0, 0, 0, 0.08)' }};
    {%- endif -%}
  }

  /* Advanced Glassmorphism Overlay */
  .boat-product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {% if section.settings.enable_glassmorphism %}
      linear-gradient(135deg,
        rgba(255, 255, 255, {{ section.settings.glass_opacity_1 | default: 0.2 }}) 0%,
        rgba(255, 255, 255, {{ section.settings.glass_opacity_2 | default: 0.1 }}) 50%,
        rgba(255, 255, 255, {{ section.settings.glass_opacity_3 | default: 0.05 }}) 100%)
    {% else %}
      transparent
    {% endif %};
    border-radius: inherit;
    pointer-events: none;
    z-index: 1;
  }

  .boat-product-card:hover {
    transform: translateY(-{{ section.settings.card_hover_lift | default: 12 }}px) scale({{ section.settings.card_hover_scale | default: 1.03 }});
    box-shadow: {{ section.settings.card_hover_shadow | default: '0 25px 50px rgba(0, 0, 0, 0.2), 0 0 40px rgba(217, 35, 45, 0.15), 0 5px 15px rgba(0, 0, 0, 0.1)' }};
    border-color: {{ section.settings.card_hover_border_color | default: 'rgba(217, 35, 45, 0.3)' }};
  }

  /* Premium Image Container */
  .boat-product-image-container {
    position: relative;
    margin-bottom: {{ section.settings.image_margin_bottom | default: 16 }}px;
    border-radius: {{ section.settings.image_container_radius | default: 16 }}px;
    overflow: hidden;
    z-index: 2;
  }

  .boat-product-image {
    width: 100%;
    height: {{ section.settings.image_height | default: 200 }}px;
    object-fit: {{ section.settings.image_fit | default: 'cover' }};
    transition: transform {{ section.settings.image_hover_duration | default: 0.4 }}s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .boat-product-card:hover .boat-product-image {
    transform: scale({{ section.settings.image_hover_scale | default: 1.08 }});
  }

  /* Advanced Badge System */
  .boat-product-badge {
    position: absolute;
    top: {{ section.settings.badge_position_top | default: 12 }}px;
    left: {{ section.settings.badge_position_left | default: 12 }}px;
    padding: {{ section.settings.badge_padding_y | default: 6 }}px {{ section.settings.badge_padding_x | default: 12 }}px;
    border-radius: {{ section.settings.badge_border_radius | default: 20 }}px;
    font-size: {{ section.settings.badge_font_size | default: 11 }}px;
    font-weight: {{ section.settings.badge_font_weight | default: 700 }};
    text-transform: {{ section.settings.badge_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.badge_letter_spacing | default: 0.8 }}px;
    z-index: 3;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .boat-badge-new-launch {
    background: {{ section.settings.badge_new_launch_bg | default: 'linear-gradient(135deg, #000000, #434343, #000000)' }};
    color: {{ section.settings.badge_new_launch_color | default: '#ffffff' }};
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .boat-badge-trending {
    background: {{ section.settings.badge_trending_bg | default: 'linear-gradient(135deg, #ff6b35, #f7931e, #ff6b35)' }};
    color: {{ section.settings.badge_trending_color | default: '#ffffff' }};
    box-shadow: 0 4px 15px rgba(255, 107, 53, 0.4);
  }

  .boat-badge-engraving {
    background: {{ section.settings.badge_engraving_bg | default: 'linear-gradient(135deg, #8b5cf6, #a855f7, #8b5cf6)' }};
    color: {{ section.settings.badge_engraving_color | default: '#ffffff' }};
    box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4);
  }

  .boat-badge-extra-off {
    background: {{ section.settings.badge_extra_off_bg | default: 'linear-gradient(135deg, #10b981, #059669, #10b981)' }};
    color: {{ section.settings.badge_extra_off_color | default: '#ffffff' }};
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
  }

  /* Premium Spec Display */
  .boat-product-spec {
    position: absolute;
    bottom: {{ section.settings.spec_position_bottom | default: 12 }}px;
    left: {{ section.settings.spec_position_left | default: 12 }}px;
    background: {{ section.settings.spec_background | default: 'rgba(255, 255, 255, 0.95)' }};
    color: {{ section.settings.spec_color | default: '#1a1a1a' }};
    padding: {{ section.settings.spec_padding_y | default: 6 }}px {{ section.settings.spec_padding_x | default: 12 }}px;
    border-radius: {{ section.settings.spec_border_radius | default: 20 }}px;
    font-size: {{ section.settings.spec_font_size | default: 10 }}px;
    font-weight: {{ section.settings.spec_font_weight | default: 600 }};
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    z-index: 3;
  }

  /* Enhanced Product Info */
  .boat-product-info {
    color: {{ section.settings.product_info_color | default: '#1a1a1a' }};
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    z-index: 2;
    position: relative;
  }

  .boat-product-title {
    font-size: {{ section.settings.product_title_size | default: 16 }}px;
    font-weight: {{ section.settings.product_title_weight | default: 700 }};
    margin-bottom: {{ section.settings.product_title_margin | default: 12 }}px;
    color: {{ section.settings.product_title_color | default: '#1a1a1a' }};
    line-height: {{ section.settings.product_title_line_height | default: 1.4 }};
    flex-grow: 1;
    letter-spacing: {{ section.settings.product_title_letter_spacing | default: -0.2 }}px;
  }

  .boat-product-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .boat-product-title a:hover {
    color: {{ section.settings.product_title_hover_color | default: '#d9232d' }};
  }

  /* Premium Color Swatches */
  .boat-color-swatches {
    display: flex;
    gap: {{ section.settings.color_swatch_gap | default: 8 }}px;
    margin-bottom: {{ section.settings.color_swatch_margin | default: 12 }}px;
    align-items: center;
    flex-wrap: wrap;
  }

  .boat-color-swatch {
    width: {{ section.settings.color_swatch_size | default: 20 }}px;
    height: {{ section.settings.color_swatch_size | default: 20 }}px;
    border-radius: 50%;
    border: {{ section.settings.color_swatch_border_width | default: 2 }}px solid {{ section.settings.color_swatch_border_color | default: '#ffffff' }};
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
  }

  .boat-color-swatch::before {
    content: '';
    position: absolute;
    top: -3px;
    left: -3px;
    right: -3px;
    bottom: -3px;
    border-radius: 50%;
    background: transparent;
    transition: all 0.3s ease;
  }

  .boat-color-swatch:hover {
    transform: scale({{ section.settings.color_swatch_hover_scale | default: 1.3 }});
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .boat-color-swatch.active {
    transform: scale({{ section.settings.color_swatch_active_scale | default: 1.3 }});
    box-shadow: 0 0 0 3px {{ section.settings.color_swatch_active_color | default: '#d9232d' }}, 0 4px 15px rgba(217, 35, 45, 0.3);
  }

  .boat-color-count {
    font-size: {{ section.settings.color_count_size | default: 12 }}px;
    color: {{ section.settings.color_count_color | default: '#666666' }};
    margin-left: {{ section.settings.color_count_margin | default: 8 }}px;
    font-weight: 600;
    padding: 2px 8px;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 12px;
  }

  /* Premium Rating System */
  .boat-product-rating {
    display: flex;
    align-items: center;
    gap: {{ section.settings.rating_gap | default: 8 }}px;
    margin-bottom: {{ section.settings.rating_margin | default: 12 }}px;
  }

  .boat-rating-stars {
    color: {{ section.settings.rating_star_color | default: '#fbbf24' }};
    font-size: {{ section.settings.rating_star_size | default: 14 }}px;
    filter: drop-shadow(0 1px 2px rgba(251, 191, 36, 0.3));
  }

  .boat-rating-number {
    background: {{ section.settings.rating_bg | default: 'linear-gradient(135deg, #10b981, #059669)' }};
    color: {{ section.settings.rating_color | default: '#ffffff' }};
    padding: {{ section.settings.rating_padding_y | default: 4 }}px {{ section.settings.rating_padding_x | default: 8 }}px;
    border-radius: {{ section.settings.rating_border_radius | default: 12 }}px;
    font-size: {{ section.settings.rating_font_size | default: 11 }}px;
    font-weight: {{ section.settings.rating_font_weight | default: 700 }};
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
  }

  /* Premium Price Display */
  .boat-product-price {
    display: flex;
    align-items: center;
    gap: {{ section.settings.price_gap | default: 12 }}px;
    margin-bottom: {{ section.settings.price_margin | default: 16 }}px;
    flex-wrap: wrap;
  }

  .boat-current-price {
    font-size: {{ section.settings.current_price_size | default: 22 }}px;
    font-weight: {{ section.settings.current_price_weight | default: 800 }};
    color: {{ section.settings.current_price_color | default: '#1a1a1a' }};
    letter-spacing: {{ section.settings.current_price_letter_spacing | default: -0.5 }}px;
  }

  .boat-original-price {
    font-size: {{ section.settings.original_price_size | default: 14 }}px;
    color: {{ section.settings.original_price_color | default: '#888888' }};
    text-decoration: line-through;
    text-decoration-color: #d9232d;
  }

  .boat-discount-percent {
    background: {{ section.settings.discount_bg | default: 'linear-gradient(135deg, #10b981, #059669)' }};
    color: {{ section.settings.discount_color | default: '#ffffff' }};
    padding: {{ section.settings.discount_padding_y | default: 4 }}px {{ section.settings.discount_padding_x | default: 10 }}px;
    border-radius: {{ section.settings.discount_border_radius | default: 12 }}px;
    font-size: {{ section.settings.discount_font_size | default: 11 }}px;
    font-weight: {{ section.settings.discount_font_weight | default: 700 }};
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Premium Add to Cart Button */
  .boat-add-to-cart {
    width: 100%;
    background: {{ section.settings.button_bg | default: 'linear-gradient(135deg, #d9232d, #ff4757, #d9232d)' }};
    color: {{ section.settings.button_color | default: '#ffffff' }};
    border: none;
    padding: {{ section.settings.button_padding_y | default: 14 }}px {{ section.settings.button_padding_x | default: 16 }}px;
    border-radius: {{ section.settings.button_border_radius | default: 12 }}px;
    font-weight: {{ section.settings.button_font_weight | default: 700 }};
    font-size: {{ section.settings.button_font_size | default: 14 }}px;
    cursor: pointer;
    transition: all {{ section.settings.button_hover_duration | default: 0.3 }}s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    text-transform: {{ section.settings.button_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.button_letter_spacing | default: 0.8 }}px;
    position: relative;
    overflow: hidden;
    box-shadow: {{ section.settings.button_shadow | default: '0 4px 15px rgba(217, 35, 45, 0.3)' }};
  }

  /* Button Shine Effect */
  .boat-add-to-cart::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left {{ section.settings.button_shine_duration | default: 0.6 }}s ease;
  }

  .boat-add-to-cart:hover::before {
    left: 100%;
  }

  .boat-add-to-cart:hover {
    transform: translateY(-{{ section.settings.button_hover_lift | default: 2 }}px);
    box-shadow: {{ section.settings.button_hover_shadow | default: '0 8px 25px rgba(217, 35, 45, 0.4)' }};
    background: {{ section.settings.button_hover_bg | default: 'linear-gradient(135deg, #ff4757, #d9232d, #ff4757)' }};
  }

  .boat-add-to-cart:active {
    transform: translateY(0);
  }

  /* Quick View Button */
  .boat-quick-view {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(255, 255, 255, 0.95);
    color: #1a1a1a;
    border: none;
    padding: 12px 20px;
    border-radius: 25px;
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    z-index: 4;
  }

  .boat-product-card:hover .boat-quick-view {
    opacity: 1;
    visibility: visible;
  }

  .boat-quick-view:hover {
    background: #d9232d;
    color: #ffffff;
    transform: translate(-50%, -50%) scale(1.05);
  }

  /* Responsive Design */
  @media screen and (max-width: 989px) {
    .boat-carousel-title {
      font-size: {{ section.settings.title_size_tablet | default: 28 }}px;
    }

    .boat-product-grid {
      grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width_tablet | default: 240 }}px, 1fr));
      gap: {{ section.settings.grid_gap_tablet | default: 20 }}px;
    }

    .boat-product-card {
      min-height: {{ section.settings.card_min_height_tablet | default: 420 }}px;
      padding: {{ section.settings.card_padding_tablet | default: 16 }}px;
    }

    .boat-product-image {
      height: {{ section.settings.image_height_tablet | default: 180 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .boat-carousel-wrapper {
      padding: {{ section.settings.section_padding_top_mobile | default: 40 }}px 0 {{ section.settings.section_padding_bottom_mobile | default: 40 }}px;
    }

    .boat-carousel-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
      margin-bottom: {{ section.settings.header_margin_bottom_mobile | default: 30 }}px;
    }

    .boat-carousel-title {
      font-size: {{ section.settings.title_size_mobile | default: 24 }}px;
    }

    .boat-product-grid {
      grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width_mobile | default: 280 }}px, 1fr));
      gap: {{ section.settings.grid_gap_mobile | default: 16 }}px;
    }

    .boat-product-card {
      min-height: {{ section.settings.card_min_height_mobile | default: 380 }}px;
    }

    .boat-product-image {
      height: {{ section.settings.image_height_mobile | default: 160 }}px;
    }
  }

  @media screen and (max-width: 550px) {
    .boat-product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.grid_gap_small | default: 12 }}px;
    }

    .boat-product-card {
      min-height: {{ section.settings.card_min_height_small | default: 350 }}px;
      padding: {{ section.settings.card_padding_small | default: 12 }}px;
    }

    .boat-product-image {
      height: {{ section.settings.image_height_small | default: 140 }}px;
    }

    .boat-current-price {
      font-size: {{ section.settings.current_price_size_small | default: 18 }}px;
    }
  }

  /* Premium Animation Effects */
  @media (prefers-reduced-motion: no-preference) {
    .boat-product-card {
      animation: fadeInUp 0.6s ease-out;
    }

    .boat-product-card:nth-child(odd) {
      animation-delay: 0.1s;
    }

    .boat-product-card:nth-child(even) {
      animation-delay: 0.2s;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .boat-product-card {
      border: 2px solid #000000;
    }

    .boat-add-to-cart {
      border: 2px solid #ffffff;
    }
  }
{%- endstyle -%}

<div class="boat-carousel-wrapper">
  <div class="boat-carousel-content">
    <div class="boat-carousel-header">
      {%- if section.settings.title != blank -%}
        <h2 class="boat-carousel-title">{{ section.settings.title }}</h2>
      {%- endif -%}

      {%- if section.settings.collection != blank and section.settings.show_view_all -%}
        <a href="{{ collections[section.settings.collection].url }}" class="boat-view-all-link">
          {{ section.settings.view_all_text | default: 'View All' }} ‚äï
        </a>
      {%- endif -%}
    </div>

    <div class="boat-product-grid">
      {%- liquid
        assign collection = collections[section.settings.collection]
        if collection == blank
          assign collection = collections.all
        endif

        assign products_to_show = section.settings.products_to_show | default: 6

        if section.settings.enable_custom_badges
          assign badge_types = section.settings.badge_types | split: ','
          assign badge_labels = section.settings.badge_labels | split: ','
        else
          assign badge_types = 'new-launch,trending,engraving,extra-off' | split: ','
          assign badge_labels = 'New Launch,üî• Trending,‚ö° Engraving Available,üíö EXTRA ‚Çπ100 OFF' | split: ','
        endif

        if section.settings.enable_custom_specs
          assign specs = section.settings.product_specs | split: ','
        else
          assign specs = '50 Hours Playback,20 Hours Playback,40 Hours Playback,BT Calling,12 Hours Playback,10000mAh Battery' | split: ','
        endif
      -%}

      {%- for product in collection.products limit: products_to_show -%}
        {%- assign random_badge = forloop.index0 | modulo: badge_types.size -%}
        {%- assign random_spec = forloop.index0 | modulo: specs.size -%}
        {%- if section.settings.enable_custom_ratings -%}
          {%- assign product_rating = section.settings.custom_ratings | split: ',' | first -%}
        {%- else -%}
          {%- assign random_rating = '4.6,4.9,4.8,5.0,4.8,5.0' | split: ',' -%}
          {%- assign product_rating = random_rating[forloop.index0] | default: '4.8' -%}
        {%- endif -%}

        <div class="boat-product-card">
          <div class="boat-product-image-container">
            {%- if section.settings.show_badges -%}
              <div class="boat-product-badge boat-badge-{{ badge_types[random_badge] }}">
                {{ badge_labels[random_badge] }}
              </div>
            {%- endif -%}

            {%- if section.settings.show_specs -%}
              <div class="boat-product-spec">
                {{ specs[random_spec] }}
              </div>
            {%- endif -%}

            <a href="{{ product.url }}">
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="boat-product-image"
                width="400"
                height="400"
              >
            </a>
          </div>

          <div class="boat-product-info">
            <h3 class="boat-product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>

            {%- if section.settings.show_color_swatches -%}
              {%- if product.options contains 'Color' -%}
                <div class="boat-color-swatches">
                  {%- assign color_count = 0 -%}
                  {%- for option in product.options -%}
                    {%- if option == 'Color' -%}
                      {%- assign color_values = product.option_by_name[option].values -%}
                      {%- assign color_count = color_values.size -%}
                      {%- for color in color_values limit: 3 -%}
                        {%- assign color_lower = color | downcase -%}
                        {%- assign color_hex = '#000000' -%}
                        {%- case color_lower -%}
                          {%- when 'black' -%}
                            {%- assign color_hex = '#000000' -%}
                          {%- when 'blue' -%}
                            {%- assign color_hex = '#3b82f6' -%}
                          {%- when 'green' -%}
                            {%- assign color_hex = '#10b981' -%}
                          {%- when 'red' -%}
                            {%- assign color_hex = '#ef4444' -%}
                          {%- when 'white' -%}
                            {%- assign color_hex = '#ffffff' -%}
                          {%- when 'gray', 'grey' -%}
                            {%- assign color_hex = '#6b7280' -%}
                          {%- else -%}
                            {%- assign color_hex = '#8b5cf6' -%}
                        {%- endcase -%}
                        <div
                          class="boat-color-swatch{% if forloop.first %} active{% endif %}"
                          style="background-color: {{ color_hex }};"
                        ></div>
                      {%- endfor -%}
                      {%- if color_count > 3 -%}
                        <span class="boat-color-count">+{{ color_count | minus: 3 }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              {%- else -%}
                {%- comment -%} Default color swatches if no color option {%- endcomment -%}
                <div class="boat-color-swatches">
                  <div class="boat-color-swatch active" style="background-color: #000000;"></div>
                  <div class="boat-color-swatch" style="background-color: #3b82f6;"></div>
                  <span class="boat-color-count">+{{ forloop.index | modulo: 3 | plus: 1 }}</span>
                </div>
              {%- endif -%}
            {%- endif -%}

            {%- if section.settings.show_ratings -%}
              <div class="boat-product-rating">
                <div class="boat-rating-stars">‚òÖ</div>
                <div class="boat-rating-number">{{ product_rating }}</div>
              </div>
            {%- endif -%}

            <div class="boat-product-price">
              <span class="boat-current-price">{{ product.price | money }}</span>
              {%- if product.compare_at_price > product.price -%}
                <span class="boat-original-price">{{ product.compare_at_price | money }}</span>
                {%- assign discount = product.compare_at_price
                  | minus: product.price
                  | times: 100.0
                  | divided_by: product.compare_at_price
                  | round
                -%}
                <span class="boat-discount-percent">{{ discount }}% off</span>
              {%- endif -%}
            </div>

            {%- if section.settings.show_add_to_cart -%}
              <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" class="boat-add-to-cart">
                  {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
                </button>
              </form>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>


{%- comment -%}
  üéØ EXACT boat-lifestyle.com Product Carousel Clone
  This is a pixel-perfect replica of boat's actual product carousel structure
{%- endcomment -%}

{%- style -%}
  .boat-carousel-section {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top | default: 60 }}px 0 {{ section.settings.section_padding_bottom | default: 60 }}px;
  }

  .boat-carousel-container {
    max-width: {{ section.settings.content_max_width | default: 1400 }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.content_padding_x | default: 20 }}px;
  }

  /* Header matching boat's style */
  .boat-carousel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ section.settings.header_margin_bottom | default: 30 }}px;
  }

  .boat-carousel-title {
    font-size: {{ section.settings.title_size | default: 32 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    color: {{ section.settings.title_color | default: '#1a1a1a' }};
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .boat-view-all {
    color: {{ section.settings.view_all_color | default: '#007aff' }};
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    transition: color 0.2s ease;
  }

  .boat-view-all:hover {
    color: {{ section.settings.view_all_hover_color | default: '#0051d0' }};
  }

  /* EXACT boat product list structure */
  .product-list__inner {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width | default: 280 }}px, 1fr));
    gap: {{ section.settings.grid_gap | default: 24 }}px;
  }

  /* EXACT boat product-item styling */
  .product-item {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .product-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .product__wrapper {
    position: relative;
  }

  /* Labels system matching boat exactly */
  .labels-wrapper {
    position: absolute;
    top: 12px;
    left: 12px;
    right: 12px;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .metafeild-label {
    background: {{ section.settings.spec_background | default: '#ffd700' }};
    color: {{ section.settings.spec_color | default: '#1a1a1a' }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 10px;
    font-weight: 600;
    width: fit-content;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .card--rating {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-radius: 6px;
    padding: 6px 8px;
    width: fit-content;
  }

  .rating {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .rating__stars {
    display: flex;
    align-items: center;
    gap: 2px;
    font-size: 12px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .rating__caption {
    font-size: 11px !important;
    color: #666;
    display: flex;
    align-items: center;
    gap: 2px;
  }

  /* Priority labels matching boat */
  .priority.label {
    padding: 6px 10px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 4px;
    width: fit-content;
  }

  .bg-purple {
    background: #8b5cf6;
    color: #ffffff;
  }

  .bg-orange {
    background: #ff6647;
    color: #ffffff;
  }

  .bg-green {
    background: #00c896;
    color: #ffffff;
  }

  /* Product image wrapper */
  .product-item__image-wrapper {
    position: relative;
    overflow: hidden;
  }

  .product-item__aspect-ratio {
    display: block;
    position: relative;
    overflow: hidden;
  }

  .product-item__primary-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-item:hover .product-item__primary-image {
    transform: scale(1.05);
  }

  .personalised-icon {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 5;
  }

  /* Product info section */
  .product-item__info {
    padding: 16px;
  }

  .product-item-meta {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .product-item-meta__title {
    font-size: 16px;
    font-weight: 600;
    color: #1a1a1a;
    text-decoration: none;
    line-height: 1.4;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .product-item-meta__title:hover {
    color: #007aff;
  }

  .product__spliter {
    height: 1px;
    background: #e5e5e5;
    margin: 8px 0;
  }

  /* Price styling matching boat exactly */
  .price-list {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .price--highlight {
    font-size: 18px;
    font-weight: 700;
    color: #1a1a1a;
  }

  .grid--price {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .price--compare {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }

  .off {
    font-size: 12px;
    font-weight: 600;
    color: #00c896;
    margin: 0;
  }

  /* Color swatches matching boat exactly */
  .variants-list {
    background: none;
    border: none;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
  }

  .swatch-circle {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    border: 2px solid #ffffff;
    box-shadow: 0 0 0 1px #e0e0e0;
    transition: transform 0.2s ease;
  }

  .swatch-circle:hover {
    transform: scale(1.1);
  }

  .more-colors {
    font-size: 11px;
    color: #666;
    font-weight: 500;
    margin-left: 2px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .boat-carousel-title {
      font-size: 24px;
    }

    .product-list__inner {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 16px;
    }

    .boat-carousel-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }
  }

  @media (max-width: 480px) {
    .product-list__inner {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 12px;
    }
  }
{%- endstyle -%}

<div class="boat-carousel-section">
  <div class="boat-carousel-container">
    {%- if section.settings.show_header -%}
      <div class="boat-carousel-header">
        {%- if section.settings.title != blank -%}
          <h2 class="boat-carousel-title">{{ section.settings.title | escape }}</h2>
        {%- endif -%}

        {%- if section.settings.view_all_url != blank and section.settings.view_all_text != blank -%}
          <a href="{{ section.settings.view_all_url }}" class="boat-view-all">
            {{ section.settings.view_all_text | escape }}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="product-list__inner">
      {%- if section.settings.collection != blank -%}
        {%- assign collection = collections[section.settings.collection] -%}
        {%- assign products_to_show = section.settings.products_count | default: 6 -%}

        {%- for product in collection.products limit: products_to_show -%}
          <product-item class="product-item two-point-o product-item-vertical">
            <div class="product__wrapper">
              <div class="labels-wrapper metafeild-label">
                {%- comment -%} Product spec label {%- endcomment -%}
                {%- if product.metafields.custom.spec_label != blank -%}
                  <span class="metafeild-label label--highlight custom-label label ui-2">
                    {{ product.metafields.custom.spec_label }}
                  </span>
                {%- elsif section.settings.show_default_spec -%}
                  <span class="metafeild-label label--highlight custom-label label ui-2">
                    {{ section.settings.default_spec_text | default: 'Premium Quality' }}
                  </span>
                {%- endif -%}

                {%- comment -%} Rating display {%- endcomment -%}
                {%- if section.settings.show_ratings -%}
                  <div class="card--rating">
                    <div class="rating">
                      <div class="rating__stars" data-rating="4.8" role="img" aria-label="4.8 out of 5.0 stars">
                        <span>
                          <img
                            src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/star-5.png?v=1722331088"
                            alt="star"
                            width="100"
                            height="100"
                            loading="lazy"
                            style="width: 14px;display: inline-block;vertical-align: bottom;"
                          >
                        </span>
                        {{ section.settings.default_rating | default: '4.8' }}
                      </div>
                      <span class="rating__caption plp-reviews">
                        {{ section.settings.default_reviews | default: '150' -}}
                        <span
                          ><img
                            src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/Mask_group-10.png?v=1677571152"
                            style="width:11px;height:11px;"
                            alt="verified reviews"
                            width="11"
                            height="11"
                        ></span>
                      </span>
                    </div>
                  </div>
                {%- endif -%}

                {%- comment -%} Priority labels {%- endcomment -%}
                {%- if product.tags contains 'new-launch' or section.settings.show_new_launch_badge -%}
                  <span
                    class="priority label z-4 label--highlight custom-label bg-purple just launched"
                    style="display: flex; align-items: center;"
                  >
                    üéâ {{ section.settings.new_launch_text | default: 'New Launch' }}
                  </span>
                {%- endif -%}

                {%- if product.tags contains 'trending' or section.settings.show_trending_badge -%}
                  <span
                    class="priority label z-6 label--highlight custom-label bg-orange trending"
                    style="display: flex; align-items: center;"
                  >
                    ‚ú®{{ section.settings.trending_text | default: 'Trending' }}
                  </span>
                {%- endif -%}

                {%- if product.tags contains 'engraving' or section.settings.show_engraving_badge -%}
                  <span
                    class="priority label z-10 label--highlight custom-label free-label bg-green"
                    style="display: flex; align-items: center;"
                  >
                    ‚úçÔ∏è {{ section.settings.engraving_text | default: 'Engraving Available' }}
                  </span>
                {%- endif -%}

                {%- if product.tags contains 'extra-off' or section.settings.show_extra_off_badge -%}
                  <span
                    class="priority label z-9-2 label--highlight custom-label free-label bg-green"
                    style="display: flex; align-items: center;"
                  >
                    <img
                      src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/offer_4000e398-1550-49a4-8cf7-00ae10d6b50d.png?v=1726470069"
                      class="label--img"
                      height="9"
                      width="9"
                      loading="lazy"
                    >
                    {{ section.settings.extra_off_text | default: 'EXTRA ‚Çπ100 OFF' }}
                  </span>
                {%- endif -%}

                <div class="product-item__image-wrapper">
                  {%- if product.tags contains 'personalised' or section.settings.show_personalised_icon -%}
                    <span class="personalised-icon">
                      <img
                        src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/personalisation_ca8237cd-20ca-4da7-8ad2-7d8a50320b3c.png?v=1724308287"
                        alt="Personalization"
                        loading="lazy"
                        width="29"
                        height="29"
                      >
                    </span>
                  {%- endif -%}

                  <a
                    href="{{ product.url }}"
                    class="product-item__aspect-ratio aspect-ratio"
                    style="padding-bottom: 100.0%; --aspect-ratio: 1"
                  >
                    {%- if product.featured_media -%}
                      <img
                        class="product-item__primary-image"
                        loading="lazy"
                        width="300"
                        height="300"
                        decoding="async"
                        alt="{{ product.featured_media.alt | escape }}"
                        src="{{ product.featured_media | image_url: width: 600 }}"
                        srcset="
                          {{ product.featured_media | image_url: width: 200 }} 200w,
                          {{ product.featured_media | image_url: width: 400 }} 400w,
                          {{ product.featured_media | image_url: width: 600 }} 600w
                        "
                        sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 300px"
                      >
                    {%- else -%}
                      <div
                        class="product-item__primary-image"
                        style="background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;"
                      >
                        No Image
                      </div>
                    {%- endif -%}
                  </a>
                </div>
              </div>
            </div>

            <div class="product-item__info">
              <div class="product-item-meta">
                <span class="product-item-meta__reviews-badge text--small vertical-product__card">
                  <a href="{{ product.url }}" class="product-item-meta__title tile-title">
                    {{ product.title | escape }}
                  </a>

                  <div class="product__spliter"></div>

                  <div class="product-item-meta__price-list-container">
                    <div class="price-list price-list--centered">
                      <span class="price price--highlight product-card-price" data-price="{{ product.price }}">
                        <span class="visually-hidden">Sale price</span>{{ product.price | money }}
                      </span>

                      {%- if product.compare_at_price > product.price -%}
                        <div class="grid--price">
                          <span
                            class="price price--compare line-through"
                            data-compare-price="{{ product.compare_at_price }}"
                          >
                            <span class="visually-hidden">Regular price</span>{{ product.compare_at_price | money }}
                          </span>
                          {%- assign discount_percentage = product.compare_at_price
                            | minus: product.price
                            | times: 100
                            | divided_by: product.compare_at_price
                            | round
                          -%}
                          <p class="m-0 off">{{ discount_percentage }}% off</p>
                        </div>
                      {%- endif -%}
                    </div>
                  </div>

                  {%- comment -%} Color variants {%- endcomment -%}
                  {%- if product.options contains 'Color' and section.settings.show_color_swatches -%}
                    {%- assign color_option = product.options_by_name.Color -%}
                    {%- if color_option.values.size > 0 -%}
                      <button aria-label="Open Drawer" class="variants-list">
                        {%- assign colors_shown = 0 -%}
                        {%- for value in color_option.values limit: 2 -%}
                          {%- assign color_handle = value | handle -%}
                          {%- assign color_value = value | downcase -%}
                          <span class="swatch-circle" style="background:{{ color_value }}"></span>
                          {%- assign colors_shown = colors_shown | plus: 1 -%}
                        {%- endfor -%}

                        {%- if color_option.values.size > 2 -%}
                          <span class="more-colors">+{{ color_option.values.size | minus: 2 }}</span>
                        {%- endif -%}
                      </button>
                    {%- endif -%}
                  {%- endif -%}
                </span>

                <div class="position-relative"></div>
              </div>
            </div>
          </product-item>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>


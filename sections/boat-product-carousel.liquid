<style>
  .boat-product-carousel {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding | default: 40 }}px 0;
  }

  .boat-product-carousel .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .boat-product-carousel__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .boat-product-carousel__title {
    font-size: {{ section.settings.title_size | default: 24 }}px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#000000' }};
    margin: 0;
  }

  .boat-product-carousel__view-all {
    color: {{ section.settings.view_all_color | default: '#fe0000' }};
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .boat-product-carousel__view-all:hover {
    color: {{ section.settings.view_all_hover_color | default: '#e60000' }};
  }

  .boat-product-carousel__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }

  .boat-product-card {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    position: relative;
  }

  .boat-product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .boat-product-card__image {
    position: relative;
    padding-bottom: 75%;
    overflow: hidden;
    background: #f8f8f8;
  }

  .boat-product-card__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .boat-product-card:hover .boat-product-card__image img {
    transform: scale(1.05);
  }

  .boat-product-card__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: {{ section.settings.badge_bg | default: '#fe0000' }};
    color: {{ section.settings.badge_text | default: '#ffffff' }};
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }

  .boat-product-card__info {
    padding: 20px;
  }

  .boat-product-card__title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .boat-product-card__title a {
    color: inherit;
    text-decoration: none;
  }

  .boat-product-card__title a:hover {
    color: {{ section.settings.view_all_color | default: '#fe0000' }};
  }

  .boat-product-card__price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 10px;
  }

  .boat-product-card__price-current {
    font-size: 18px;
    font-weight: 700;
    color: #333;
  }

  .boat-product-card__price-original {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }

  .boat-product-card__discount {
    font-size: 12px;
    color: {{ section.settings.discount_color | default: '#00c896' }};
    font-weight: 600;
  }

  .boat-product-card__rating {
    display: flex;
    align-items: center;
    gap: 5px;
    margin-bottom: 10px;
  }

  .boat-product-card__stars {
    color: #ffc107;
    font-size: 14px;
  }

  .boat-product-card__rating-text {
    font-size: 12px;
    color: #666;
  }

  .boat-product-card__colors {
    display: flex;
    gap: 6px;
    margin-top: 10px;
  }

  .boat-product-card__color-swatch {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 1px #ddd;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .boat-product-carousel__grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
    }

    .boat-product-card__info {
      padding: 15px;
    }

    .boat-product-carousel__header {
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }

    .boat-product-carousel__title {
      font-size: 20px;
    }
  }
</style>

<div class="boat-product-carousel">
  <div class="page-width">
    {% if section.settings.show_header %}
      <div class="boat-product-carousel__header">
        <h2 class="boat-product-carousel__title">{{ section.settings.title | escape }}</h2>
        {% if section.settings.view_all_url != blank %}
          <a href="{{ section.settings.view_all_url }}" class="boat-product-carousel__view-all">
            {{ section.settings.view_all_text | default: 'View All' }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="boat-product-carousel__grid">
      {% if section.settings.collection != blank %}
        {% for product in section.settings.collection.products limit: section.settings.products_count %}
          <div class="boat-product-card">
            <div class="boat-product-card__image">
              {% if product.compare_at_price > product.price and section.settings.show_discount_badge %}
                {% assign discount_percentage = product.compare_at_price
                  | minus: product.price
                  | times: 100
                  | divided_by: product.compare_at_price
                  | round
                %}
                <div class="boat-product-card__badge">{{ discount_percentage }}% OFF</div>
              {% endif %}

              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="300"
                  >
                {% else %}
                  <div style="width: 100%; height: 100%; background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #999;">
                    No Image
                  </div>
                {% endif %}
              </a>
            </div>

            <div class="boat-product-card__info">
              <h3 class="boat-product-card__title">
                <a href="{{ product.url }}">{{ product.title | escape }}</a>
              </h3>

              <div class="boat-product-card__price">
                <span class="boat-product-card__price-current">
                  {{ product.price | money }}
                </span>
                {% if product.compare_at_price > product.price %}
                  <span class="boat-product-card__price-original">
                    {{ product.compare_at_price | money }}
                  </span>
                  {% assign discount_percentage = product.compare_at_price
                    | minus: product.price
                    | times: 100
                    | divided_by: product.compare_at_price
                    | round
                  %}
                  <span class="boat-product-card__discount">{{ discount_percentage }}% off</span>
                {% endif %}
              </div>

              {% if section.settings.show_rating %}
                <div class="boat-product-card__rating">
                  <div class="boat-product-card__stars">★★★★☆</div>
                  <span class="boat-product-card__rating-text">
                    {{- section.settings.default_rating | default: '4.5' }} (
                    {{- section.settings.default_reviews | default: '120' -}}
                    )</span
                  >
                </div>
              {% endif %}

              {% if section.settings.show_colors and product.options contains 'Color' %}
                <div class="boat-product-card__colors">
                  {% assign color_option = product.options_by_name.Color %}
                  {% for value in color_option.values limit: 4 %}
                    {% assign color_value = value | downcase %}
                    <div
                      class="boat-product-card__color-swatch"
                      style="background-color: {{ color_value }};"
                      title="{{ value }}"
                    ></div>
                  {% endfor %}
                  {% if color_option.values.size > 4 %}
                    <span style="font-size: 12px; color: #666;">+{{ color_option.values.size | minus: 4 }}</span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>


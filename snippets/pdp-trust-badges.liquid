{% comment %}
  PDP Trust Badges Component
  Matches boat-lifestyle.com warranty and service badges
{% endcomment %}

<div class="trust-badges">
  <div class="trust-badge">
    <div class="trust-badge__icon">
      <span class="svg-wrapper">
        {{- 'icon-check-mark.svg' | inline_asset_content -}}
      </span>
    </div>
    <div class="trust-badge__title">12+3 Months Warranty</div>
    <div class="trust-badge__description">Extended warranty coverage</div>
  </div>

  <div class="trust-badge">
    <div class="trust-badge__icon">
      <span class="svg-wrapper">
        {{- 'icon-return.svg' | inline_asset_content -}}
      </span>
    </div>
    <div class="trust-badge__title">7-day Replacement</div>
    <div class="trust-badge__description">Easy replacement policy</div>
  </div>

  <div class="trust-badge">
    <div class="trust-badge__icon">
      <span class="svg-wrapper">
        {{- 'icon-truck.svg' | inline_asset_content -}}
      </span>
    </div>
    <div class="trust-badge__title">Free Delivery</div>
    <div class="trust-badge__description">Across Qatar & GCC</div>
  </div>

  <div class="trust-badge">
    <div class="trust-badge__icon">
      <span class="svg-wrapper">
        {{- 'icon-padlock.svg' | inline_asset_content -}}
      </span>
    </div>
    <div class="trust-badge__title">Secure Payment</div>
    <div class="trust-badge__description">256-bit SSL encryption</div>
  </div>

  <div class="trust-badge">
    <div class="trust-badge__icon">
      <span class="svg-wrapper">
        {{- 'icon-chat-bubble.svg' | inline_asset_content -}}
      </span>
    </div>
    <div class="trust-badge__title">24/7 Support</div>
    <div class="trust-badge__description">Dedicated customer care</div>
  </div>

  <div class="trust-badge">
    <div class="trust-badge__icon">
      <span class="svg-wrapper">
        {{- 'icon-star.svg' | inline_asset_content -}}
      </span>
    </div>
    <div class="trust-badge__title">1 Crore+ Happy Customers</div>
    <div class="trust-badge__description">Trusted by millions</div>
  </div>
</div>
